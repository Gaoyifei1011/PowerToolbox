<Application
    x:Class="PowerToolbox.MainApp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:Microsoft.UI.Xaml.Media">
    <Application.Resources>
        <ResourceDictionary>
            <x:Double x:Key="TeachingTipMinWidth">0</x:Double>
            <x:Double x:Key="TeachingTipMaxWidth">9999</x:Double>
            <Thickness x:Key="TeachingTipContentMargin">0</Thickness>
            <Thickness x:Key="TeachingTipButtonPanelMargin">0,0,0,0</Thickness>

            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources>
                    <XamlControlsResources.MergedDictionaries>
                        <ResourceDictionary Source="ms-appx:///Styles/DateTimePicker.xaml" />
                        <ResourceDictionary Source="ms-appx:///Styles/InfoBar.xaml" />
                        <ResourceDictionary Source="ms-appx:///Styles/NavigationView.xaml" />
                        <ResourceDictionary Source="ms-appx:///Styles/ProgressRing.xaml" />
                        <ResourceDictionary Source="ms-appx:///Styles/RadioButtons.xaml" />
                        <ResourceDictionary Source="ms-appx:///Styles/TimePicker.xaml" />

                        <ResourceDictionary>
                            <ResourceDictionary.ThemeDictionaries>
                                <ResourceDictionary x:Key="Default">
                                    <Color x:Key="DefaultBackgroundColor">#141414</Color>
                                    <Color x:Key="DialogContentFillColor">#2B2B2B</Color>
                                    <media:SolidColorBrush x:Key="DefaultBackgroundColorBrush" Color="{ThemeResource DefaultBackgroundColor}" />
                                    <media:SolidColorBrush x:Key="DialogContentFillColorBrush" Color="{ThemeResource DialogContentFillColor}" />
                                    <media:AcrylicBrush
                                        x:Key="AppThemeDisplayBrush"
                                        FallbackColor="#FF2C2C2C"
                                        TintColor="#FF2C2C2C"
                                        TintLuminosityOpacity="0.96"
                                        TintOpacity="0.15" />
                                </ResourceDictionary>
                                <ResourceDictionary x:Key="HighConstract">
                                    <Color x:Key="DefaultBackgroundColor">#FF0000</Color>
                                    <Color x:Key="DialogContentFillColor">#FF0000</Color>
                                    <media:SolidColorBrush x:Key="DefaultBackgroundColorBrush" Color="{ThemeResource DefaultBackgroundColor}" />
                                    <media:SolidColorBrush x:Key="DialogContentFillColorBrush" Color="{ThemeResource DialogContentFillColor}" />
                                    <media:AcrylicBrush
                                        x:Key="AppThemeDisplayBrush"
                                        FallbackColor="#FFF9F9F9"
                                        TintColor="#FFFCFCFC"
                                        TintLuminosityOpacity="0.85"
                                        TintOpacity="0" />
                                </ResourceDictionary>
                                <ResourceDictionary x:Key="Light">
                                    <Color x:Key="DefaultBackgroundColor">#F0F3F9</Color>
                                    <Color x:Key="DialogContentFillColor">#FFFFFF</Color>
                                    <media:SolidColorBrush x:Key="DefaultBackgroundColorBrush" Color="{ThemeResource DefaultBackgroundColor}" />
                                    <media:SolidColorBrush x:Key="DialogContentFillColorBrush" Color="{ThemeResource DialogContentFillColor}" />
                                    <media:AcrylicBrush
                                        x:Key="AppThemeDisplayBrush"
                                        FallbackColor="#FFF9F9F9"
                                        TintColor="#FFFCFCFC"
                                        TintLuminosityOpacity="0.85"
                                        TintOpacity="0" />
                                </ResourceDictionary>
                            </ResourceDictionary.ThemeDictionaries>
                        </ResourceDictionary>
                    </XamlControlsResources.MergedDictionaries>
                </XamlControlsResources>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
