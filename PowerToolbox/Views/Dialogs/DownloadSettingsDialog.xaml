<ContentDialog
    x:Class="PowerToolbox.Views.Dialogs.DownloadSettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <Thickness x:Key="ContentDialogPadding">3</Thickness>
        <x:Double x:Key="ContentDialogMinWidth">768</x:Double>
        <x:Double x:Key="ContentDialogMinHeight">560</x:Double>
        <x:Double x:Key="ContentDialogMaxWidth">768</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">560</x:Double>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  WinGet 应用版本信息标题栏  -->
        <Grid
            Grid.Row="0"
            Margin="3,0,3,0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="2,2,0,0"
                VerticalAlignment="Center"
                FontSize="16"
                Glyph="&#xE713;" />

            <TextBlock
                Grid.Column="1"
                Margin="6,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="14"
                Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DownloadSettings')}" />

            <Button
                Grid.Column="2"
                Margin="0,0,-5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="{x:Bind OnCloseClicked}"
                Style="{StaticResource AlternateCloseButtonStyle}">

                <Button.Content>
                    <FontIcon
                        Margin="4"
                        FontSize="16"
                        Glyph="&#xE711;" />
                </Button.Content>

                <ToolTipService.ToolTip>
                    <ToolTip MaxWidth="9999" Content="{x:Bind rootservice:ResourceService.DialogResource.GetString('Close')}" />
                </ToolTipService.ToolTip>
            </Button>
        </Grid>

        <ScrollViewer
            Grid.Row="1"
            Margin="0,5,0,0"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <Grid Margin="3,0,3,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  下载文件路径设置  -->
                <Grid
                    Grid.Row="0"
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE8B7;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock
                            HorizontalAlignment="Left"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('FileStoragePath')}" />

                        <TextBlock
                            HorizontalAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <Hyperlink Click="{x:Bind OnDownloadOpenFolderClicked}" UnderlineStyle="None">
                                <Run Text="{x:Bind DownloadFolder, Mode=OneWay}" />
                            </Hyperlink>

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <StackPanel HorizontalAlignment="Stretch">
                                        <TextBlock Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('FileStoragePath')}" />
                                        <TextBlock Text="{x:Bind DownloadFolder, Mode=OneWay}" />
                                        <MenuFlyoutSeparator Margin="4,3" />
                                        <TextBlock Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('ClickToOpenFolder')}" />
                                    </StackPanel>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <controls:DropDownButton
                        Grid.Column="2"
                        Margin="6,0,0,0"
                        Content="{x:Bind rootservice:ResourceService.DialogResource.GetString('ChangeFolder')}">

                        <controls:DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem
                                    Click="{x:Bind OnDownloadChangeFolderClicked}"
                                    Tag="AppCache"
                                    Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('AppCacheFolder')}">

                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xECAA;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>

                                <MenuFlyoutItem
                                    Click="{x:Bind OnDownloadChangeFolderClicked}"
                                    Tag="Download"
                                    Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DownloadFolder')}">

                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE896;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>

                                <MenuFlyoutItem
                                    Click="{x:Bind OnDownloadChangeFolderClicked}"
                                    Tag="Desktop"
                                    Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DesktopFolder')}">

                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE7F4;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>

                                <MenuFlyoutSeparator />

                                <MenuFlyoutItem
                                    Click="{x:Bind OnDownloadChangeFolderClicked}"
                                    Tag="Custom"
                                    Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('Custom')}" />
                            </MenuFlyout>
                        </controls:DropDownButton.Flyout>
                    </controls:DropDownButton>
                </Grid>

                <!--  下载引擎方式设置  -->
                <Grid
                    Grid.Row="1"
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE896;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock
                            HorizontalAlignment="Left"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DoEngineMode')}" />

                        <TextBlock
                            x:Name="DoEngineModeDescription"
                            HorizontalAlignment="Left"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DoEngineModeDescription')}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Content="{x:Bind rootservice:ResourceService.DialogResource.GetString('DoEngineModeDescription')}"
                                    Visibility="{x:Bind DoEngineModeDescription.IsTextTrimmed, Mode=OneWay}" />
                            </ToolTipService.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <controls:DropDownButton
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Content="{x:Bind DoEngineMode.Value, Mode=OneWay}">

                        <controls:DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <controls:RadioMenuFlyoutItem
                                    Click="{x:Bind OnDoEngineModeSelectClicked}"
                                    GroupName="DoEngineModeModeRadioGroup"
                                    IsChecked="{x:Bind x:Object.Equals(DoEngineMode.Key, DoEngineModeList[0].Key), Mode=OneWay}"
                                    Tag="{x:Bind DoEngineModeList[0]}"
                                    Text="{x:Bind DoEngineModeList[0].Value}" />

                                <controls:RadioMenuFlyoutItem
                                    Click="{x:Bind OnDoEngineModeSelectClicked}"
                                    GroupName="DoEngineModeModeRadioGroup"
                                    IsChecked="{x:Bind x:Object.Equals(DoEngineMode.Key, DoEngineModeList[1].Key), Mode=OneWay}"
                                    Tag="{x:Bind DoEngineModeList[1]}"
                                    Text="{x:Bind DoEngineModeList[1].Value}" />

                                <controls:RadioMenuFlyoutItem
                                    Click="{x:Bind OnDoEngineModeSelectClicked}"
                                    GroupName="DoEngineModeModeRadioGroup"
                                    IsChecked="{x:Bind x:Object.Equals(DoEngineMode.Key, DoEngineModeList[2].Key), Mode=OneWay}"
                                    Tag="{x:Bind DoEngineModeList[2]}"
                                    Text="{x:Bind DoEngineModeList[2].Value}" />
                            </MenuFlyout>
                        </controls:DropDownButton.Flyout>
                    </controls:DropDownButton>
                </Grid>

                <!--  传递优化设置  -->
                <Grid
                    Grid.Row="2"
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xF785;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock
                            HorizontalAlignment="Left"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DeliveryOptimization')}" />

                        <TextBlock
                            x:Name="DeliveryOptimizationDescription"
                            HorizontalAlignment="Left"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DeliveryOptimizationDescription')}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Content="{x:Bind rootservice:ResourceService.DialogResource.GetString('DeliveryOptimizationDescription')}"
                                    Visibility="{x:Bind DeliveryOptimizationDescription.IsTextTrimmed, Mode=OneWay}" />
                            </ToolTipService.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnOpenDeliveryOptimizationClicked}"
                        Content="{x:Bind rootservice:ResourceService.DialogResource.GetString('Open')}" />
                </Grid>

                <!--  Aria2 下载文件配置  -->
                <Grid
                    Grid.Row="3"
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE90F;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock
                            HorizontalAlignment="Left"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('Aria2Configuration')}" />

                        <TextBlock
                            x:Name="Aria2ConfigurationDescription"
                            HorizontalAlignment="Left"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('Aria2ConfigurationDescription')}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Content="{x:Bind rootservice:ResourceService.DialogResource.GetString('Aria2ConfigurationDescription')}"
                                    Visibility="{x:Bind Aria2ConfigurationDescription.IsTextTrimmed, Mode=OneWay}" />
                            </ToolTipService.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnConfigurationClicked}"
                        Content="{x:Bind rootservice:ResourceService.DialogResource.GetString('Configuration')}" />
                </Grid>

                <MenuFlyoutSeparator Grid.Row="4" Margin="4,0,4,2" />

                <TextBlock
                    Grid.Row="5"
                    Margin="3,0,3,5"
                    FontSize="15"
                    FontWeight="Normal"
                    Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DownloadInstruction')}"
                    TextAlignment="Left" />

                <TextBlock
                    Grid.Row="6"
                    Margin="3,0,3,5"
                    FontSize="14"
                    FontWeight="Normal"
                    Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DownloadDescription1')}"
                    TextAlignment="Justify"
                    TextWrapping="Wrap" />

                <TextBlock
                    Grid.Row="7"
                    Margin="3,0,3,5"
                    FontSize="14"
                    FontWeight="Normal"
                    Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('DownloadDescription2')}"
                    TextAlignment="Justify"
                    TextWrapping="Wrap" />

                <StackPanel
                    Grid.Row="8"
                    Margin="3,0,3,5"
                    Orientation="Horizontal"
                    Spacing="10">

                    <TextBlock>
                        <Hyperlink NavigateUri="https://learn.microsoft.com/windows/deployment/do/waas-delivery-optimization" UnderlineStyle="None">
                            <Run Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('LearnDeliveryOptimization')}" />
                        </Hyperlink>
                    </TextBlock>

                    <TextBlock>
                        <Hyperlink NavigateUri="https://learn.microsoft.com/windows/win32/bits/background-intelligent-transfer-service-portal" UnderlineStyle="None">
                            <Run Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('LearnBits')}" />
                        </Hyperlink>
                    </TextBlock>

                    <TextBlock HorizontalAlignment="Left">
                        <Hyperlink Click="{x:Bind OnTroubleShootClicked}" UnderlineStyle="None">
                            <Run Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('TroubleShoot')}" />
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</ContentDialog>
