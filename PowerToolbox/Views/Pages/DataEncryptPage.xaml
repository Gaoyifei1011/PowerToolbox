<Page
    x:Class="PowerToolbox.Views.Pages.DataEncryptPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:PowerToolbox.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:PowerToolbox.Models"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <CornerRadius x:Key="ListViewItemCornerRadius">0</CornerRadius>
    </Page.Resources>

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <Grid Margin="0,0,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <controls:RadioButtons
                Grid.Row="0"
                HorizontalAlignment="Center"
                MaxColumns="2"
                SelectedIndex="{x:Bind SelectedIndex, Mode=OneWay}"
                SelectionChanged="{x:Bind OnSelectionChanged}">

                <RadioButton
                    MinWidth="0"
                    Margin="0,0,20,0"
                    Content="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('File')}" />

                <RadioButton
                    MinWidth="0"
                    Margin="20,0,0,0"
                    Content="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('Content')}" />
            </controls:RadioButtons>

            <!--  数据加密文件  -->
            <Grid
                Grid.Row="1"
                Height="140"
                Margin="0,5,0,3"
                BorderBrush="{ThemeResource TextFillColorSecondaryBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}"
                Visibility="{x:Bind GetDataEncryptType(SelectedIndex, 0), Mode=OneWay}">

                <StackPanel
                    Margin="0,15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="3">

                    <FontIcon
                        HorizontalAlignment="Center"
                        FontSize="26"
                        Glyph="&#xE710;" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Text="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('DragAndDrop')}" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('DragAndDropDescription')}" />

                    <Button
                        HorizontalAlignment="Center"
                        Click="{x:Bind OnOpenLocalFileClicked}"
                        Content="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('OpenLocalFile')}" />
                </StackPanel>
            </Grid>

            <!--  数据加密内容  -->
            <TextBox
                Grid.Row="1"
                Height="140"
                Margin="0,5,0,3"
                PlaceholderText="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('EncryptPHText')}"
                Style="{StaticResource TextBoxStyle}"
                Text="{x:Bind EncryptContent, Mode=OneWay}"
                TextChanged="{x:Bind OnTextChanged}"
                Visibility="{x:Bind GetDataEncryptType(SelectedIndex, 1), Mode=OneWay}" />

            <!--  数据加密验证栏  -->
            <controls:InfoBar
                Grid.Row="2"
                Height="50"
                Margin="0,0,0,3"
                IsClosable="False"
                IsIconVisible="True"
                IsOpen="True"
                Message="{x:Bind ResultMessage, Mode=OneWay}"
                Severity="{x:Bind ResultServerity, Mode=OneWay}"
                Style="{StaticResource InfoBarStyle}">

                <controls:InfoBar.ActionButton>
                    <Button
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        IsHitTestVisible="False"
                        Visibility="{x:Bind IsEncrypting, Mode=OneWay}">

                        <controls:ProgressRing IsActive="{x:Bind IsEncrypting, Mode=OneWay}" IsIndeterminate="True" />
                    </Button>
                </controls:InfoBar.ActionButton>
            </controls:InfoBar>

            <!--  数据加密类型  -->
            <controls:Expander
                Grid.Row="3"
                Margin="0,0,0,3"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                IsExpanded="True">

                <controls:Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE97C;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('DataEncryptType')}" />
                    </Grid>
                </controls:Expander.Header>

                <controls:Expander.Content>
                    <GridView
                        Padding="12,10,0,10"
                        ItemsSource="{x:Bind DataEncryptTypeList}"
                        SelectionMode="None">

                        <GridView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultGridViewItemStyle}" TargetType="GridViewItem">
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Margin" Value="5,5,0,5" />
                            </Style>
                        </GridView.ItemContainerStyle>

                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="model:DataEncryptTypeModel">
                                <CheckBox
                                    MinWidth="120"
                                    MinHeight="0"
                                    Padding="8,0,0,0"
                                    Content="{x:Bind Name}"
                                    IsChecked="{x:Bind IsSelected, Mode=TwoWay}" />
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </controls:Expander.Content>
            </controls:Expander>

            <!--  数据加密控制栏  -->
            <Grid
                Grid.Row="4"
                Height="60"
                Margin="0,0,0,3"
                Padding="16,0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE74C;" />

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('Operation')}" />

                <Button
                    Grid.Column="2"
                    Click="{x:Bind OnStartEncryptClicked}"
                    Content="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('StartEncrypt')}"
                    IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsEncrypting), Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}" />
            </Grid>

            <ListView
                Grid.Row="5"
                Margin="0,0,0,3"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{ThemeResource ControlCornerRadius}"
                ItemsSource="{x:Bind DataEncryptResultCollection}"
                SelectionMode="None"
                Visibility="{x:Bind GetEncryptResult(IsEncrypting, DataEncryptResultCollection.Count), Mode=OneWay}">

                <ListView.Header>
                    <Grid
                        Grid.Row="0"
                        MinHeight="35"
                        Padding="6,0,0,0"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            x:Name="EncryptTypeHeaderText"
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('EncryptType')}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Content="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('EncryptType')}"
                                    Visibility="{x:Bind EncryptTypeHeaderText.IsTextTrimmed, Mode=OneWay}" />
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <TextBlock
                            x:Name="EncryptResultHeaderText"
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('EncryptResult')}">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    MaxWidth="9999"
                                    Content="{x:Bind rootservice:ResourceService.DataEncryptResource.GetString('EncryptResult')}"
                                    Visibility="{x:Bind EncryptResultHeaderText.IsTextTrimmed, Mode=OneWay}" />
                            </ToolTipService.ToolTip>
                        </TextBlock>
                    </Grid>
                </ListView.Header>

                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="MinHeight" Value="0" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ItemsControl.ItemContainerTransitions>
                    <TransitionCollection />
                </ItemsControl.ItemContainerTransitions>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:DataEncryptVertifyResultModel">
                        <Grid
                            MinHeight="35"
                            Padding="6,4,10,4"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0,0,0,1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="EncryptTypeText"
                                Grid.Column="0"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind Name}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind Name}"
                                        Placement="Mouse"
                                        Visibility="{Binding ElementName=EncryptTypeText, Path=IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                Grid.Column="1"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind Result}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>
