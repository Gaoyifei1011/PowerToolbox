<Page
    x:Class="PowerToolbox.Views.Pages.WinFRPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:PowerToolbox.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:PowerToolbox.Models"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    xmlns:system="using:System"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="30,15,30,0"
            FontSize="22"
            Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('WinFR')}" />

        <ScrollViewer
            Grid.Row="1"
            Margin="0,5,0,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="32,3,32,3"
                    FontSize="14"
                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('SelectDisk')}" />

                <!--  驱动器信息网格列表  -->
                <Grid
                    Grid.Row="1"
                    MaxHeight="280"
                    Margin="30,0,30,3"
                    Padding="4,2,0,2"
                    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <GridView
                        Padding="0,0,4,0"
                        ItemsSource="{x:Bind DriveCollection}"
                        SelectionMode="Single">
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="model:DriveModel">
                                <Grid
                                    Width="300"
                                    Height="90"
                                    Padding="8"
                                    HorizontalAlignment="Stretch"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource ControlCornerRadius}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid
                                        Grid.Column="0"
                                        Width="72"
                                        CornerRadius="{ThemeResource ControlCornerRadius}">

                                        <Image
                                            Width="48"
                                            VerticalAlignment="Center"
                                            Source="{x:Bind DiskImage}"
                                            Stretch="Uniform" />
                                    </Grid>

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical"
                                        Spacing="2">

                                        <TextBlock
                                            x:Name="NameText"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            Text="{x:Bind Name}"
                                            TextLineBounds="TrimToCapHeight"
                                            TextWrapping="NoWrap" />

                                        <controls:ProgressBar
                                            Grid.ColumnSpan="2"
                                            MinHeight="8"
                                            Margin="0,2,4,2"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            ShowError="{x:Bind IsAvailableSpaceError}"
                                            ShowPaused="{x:Bind IsAvailableSpaceWarning}"
                                            Value="{x:Bind DriveUsedPercentage}" />

                                        <TextBlock
                                            x:Name="SpaceText"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            RelativePanel.Below="NameText"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind Space}"
                                            TextTrimming="CharacterEllipsis">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind Space}"
                                                    Visibility="{Binding ElementName=SpaceText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </StackPanel>

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="LayoutVisualStates">
                                            <VisualState x:Name="WideLayout">
                                                <VisualState.StateTriggers>
                                                    <AdaptiveTrigger MinWindowWidth="641" />
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters />
                                            </VisualState>
                                            <VisualState x:Name="NarrowLayout">
                                                <VisualState.StateTriggers>
                                                    <AdaptiveTrigger MinWindowWidth="0" />
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters>
                                                    <Setter Target="controlRoot.Width" Value="Auto" />
                                                    <Setter Target="controlRoot.Height" Value="120" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

                <!--  驱动器恢复设置  -->
                <controls:Expander
                    Grid.Row="2"
                    Margin="30,0,30,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE777;" />

                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('RecoverySettings')}" />

                            <controls:SplitButton
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnRecoveryClicked}"
                                Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('Recovery')}">

                                <controls:SplitButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem Click="{x:Bind OnLearnWinFRClicked}" Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('LearnWinFR')}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE777;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </controls:SplitButton.Flyout>
                            </controls:SplitButton>
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0">
                            <!--  保存的文件夹  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('SaveFolder')}" />

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap"
                                        Visibility="{x:Bind converter:ValueConverterHelper.StringToVisibilityConvert(SaveFolder), Mode=OneWay}">

                                        <Hyperlink Click="{x:Bind OnOpenSaveFolderClicked}" UnderlineStyle="None">
                                            <Run Text="{x:Bind SaveFolder, Mode=OneWay}" />
                                        </Hyperlink>

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999">
                                                <StackPanel HorizontalAlignment="Stretch">
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('FileStoragePath')}" />
                                                    <TextBlock Text="{x:Bind SaveFolder, Mode=OneWay}" />
                                                    <MenuFlyoutSeparator Margin="4,3" />
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('OpenFolder')}" />
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </StackPanel>

                                <Button
                                    Grid.Column="1"
                                    Click="{x:Bind OnSelectFolderClicked}"
                                    Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('SelectFolder')}" />
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  恢复模式  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('RecoveryMode')}" />

                                <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedRecoveryMode.Value, Mode=OneWay}">

                                    <controls:DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[0].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[0]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[0].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[1].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[1]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[1].Value)}" />

                                            <MenuFlyoutSeparator />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[2].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[2]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[2].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[3].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[3]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[3].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnRecoveryModeClicked}"
                                                GroupName="RecoveryModeRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRecoveryMode.Key, RecoveryModeList[4].Key), Mode=OneWay}"
                                                Tag="{x:Bind RecoveryModeList[4]}"
                                                Text="{x:Bind system:Convert.ToString(RecoveryModeList[4].Value)}" />
                                        </MenuFlyout>
                                    </controls:DropDownButton.Flyout>
                                </controls:DropDownButton>
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  重复文件选项  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('DuplicatedFileOption')}" />

                                    <TextBlock
                                        x:Name="DuplicatedFileOptionDescription"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('DuplicatedFileOptionDescription')}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('DuplicatedFileOptionDescription')}"
                                                Visibility="{x:Bind DuplicatedFileOptionDescription.IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </StackPanel>

                                <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedDuplicatedFileOption.Value, Mode=OneWay}">

                                    <controls:DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnDuplicatedFileOptionClicked}"
                                                GroupName="DuplicatedFileOptionRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedDuplicatedFileOption.Key, DuplicatedFileOptionList[0].Key), Mode=OneWay}"
                                                Tag="{x:Bind DuplicatedFileOptionList[0]}"
                                                Text="{x:Bind system:Convert.ToString(DuplicatedFileOptionList[0].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnDuplicatedFileOptionClicked}"
                                                GroupName="DuplicatedFileOptionRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedDuplicatedFileOption.Key, DuplicatedFileOptionList[1].Key), Mode=OneWay}"
                                                Tag="{x:Bind DuplicatedFileOptionList[1]}"
                                                Text="{x:Bind system:Convert.ToString(DuplicatedFileOptionList[1].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnDuplicatedFileOptionClicked}"
                                                GroupName="DuplicatedFileOptionRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedDuplicatedFileOption.Key, DuplicatedFileOptionList[2].Key), Mode=OneWay}"
                                                Tag="{x:Bind DuplicatedFileOptionList[2]}"
                                                Text="{x:Bind system:Convert.ToString(DuplicatedFileOptionList[2].Value)}" />
                                        </MenuFlyout>
                                    </controls:DropDownButton.Flyout>
                                </controls:DropDownButton>
                            </Grid>

                            <MenuFlyoutSeparator />

                            <!--  使用自定义日志文件目录  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('UseCustomLogFolder')}" />

                                <ToggleSwitch
                                    Grid.Column="1"
                                    MinWidth="0"
                                    Margin="10,-2,-10,0"
                                    IsOn="{x:Bind UseCustomLogFolder, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnUseCustomLogFolderToggled}" />
                            </Grid>

                            <MenuFlyoutSeparator Visibility="{x:Bind UseCustomLogFolder, Mode=OneWay}" />

                            <!--  日志文件保存的文件夹  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind UseCustomLogFolder, Mode=OneWay}">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('LogFileSaveFolder')}" />

                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap"
                                        Visibility="{x:Bind converter:ValueConverterHelper.StringToVisibilityConvert(LogSaveFolder), Mode=OneWay}">

                                        <Hyperlink Click="{x:Bind OnOpenSaveFolderClicked}" UnderlineStyle="None">
                                            <Run Text="{x:Bind LogSaveFolder, Mode=OneWay}" />
                                        </Hyperlink>

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999">
                                                <StackPanel HorizontalAlignment="Stretch">
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('FileStoragePath')}" />
                                                    <TextBlock Text="{x:Bind LogSaveFolder, Mode=OneWay}" />
                                                    <MenuFlyoutSeparator Margin="4,3" />
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.WinFRResource.GetString('OpenFolder')}" />
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </StackPanel>

                                <Button
                                    Grid.Column="1"
                                    Click="{x:Bind OnSelectFolderClicked}"
                                    Content="{x:Bind rootservice:ResourceService.WinFRResource.GetString('SelectFolder')}" />
                            </Grid>
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
