<Page
    x:Class="PowerToolbox.Views.Pages.DataEncryptVertifyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <CornerRadius x:Key="ListViewItemCornerRadius">0</CornerRadius>

        <TransitionCollection x:Name="SuppressNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SuppressNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="LeftSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromLeft" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="RightSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromRight" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Resources>

    <SplitView
        x:Name="DataEncryptVertifySplitView"
        DisplayMode="Overlay"
        OpenPaneLength="400"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  数据加密校验控制栏  -->
                <SelectorBar
                    x:Name="DataEncryptVertifySelctorBar"
                    Grid.Row="0"
                    Margin="4,6,30,3"
                    Padding="0"
                    HorizontalAlignment="Left"
                    SelectedItem="{x:Bind SelectedItem, Mode=OneWay}">

                    <SelectorBarItem
                        Padding="12,5"
                        IsTapEnabled="True"
                        Tag="{x:Bind PageList[0]}"
                        Tapped="{x:Bind OnSelectorBarTapped}"
                        Text="{x:Bind rootservice:ResourceService.DataEncryptVertifyResource.GetString('DataEncrypt')}" />

                    <SelectorBarItem
                        Padding="12,5"
                        IsTapEnabled="True"
                        Tag="{x:Bind PageList[1]}"
                        Tapped="{x:Bind OnSelectorBarTapped}"
                        Text="{x:Bind rootservice:ResourceService.DataEncryptVertifyResource.GetString('DataVertify')}" />
                </SelectorBar>

                <Frame
                    x:Name="DataEncryptVertifyFrame"
                    Grid.Row="1"
                    Margin="16,0,0,0"
                    Navigated="{x:Bind OnNavigated}"
                    NavigationFailed="{x:Bind OnNavigationFailed}" />
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
