<Page
    x:Class="PowerToolbox.Views.Pages.DataEncryptVertifyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    mc:Ignorable="d">

    <Page.Resources>
        <CornerRadius x:Key="ListViewItemCornerRadius">0</CornerRadius>

        <TransitionCollection x:Name="SuppressNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SuppressNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="LeftSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromLeft" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="RightSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromRight" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Resources>

    <SplitView
        x:Name="FileManagerSplitView"
        DisplayMode="Overlay"
        OpenPaneLength="400"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <controls:NavigationView
                Margin="14,0,0,0"
                x:FieldModifier="public"
                AlwaysShowHeader="False"
                IsBackButtonVisible="Collapsed"
                IsPaneToggleButtonVisible="False"
                IsSettingsVisible="False"
                ItemInvoked="{x:Bind OnItemInvoked}"
                Loaded="{x:Bind OnLoaded}"
                PaneDisplayMode="Top"
                SelectedItem="{x:Bind SelectedItem, Mode=OneWay}">

                <controls:NavigationView.MenuItems>
                    <controls:NavigationViewItem Tag="DataEncrypt">
                        <controls:NavigationViewItem.Content>
                            <TextBlock
                                x:Name="DataEncryptText"
                                Text="{x:Bind rootservice:ResourceService.DataEncryptVertifyResource.GetString('DataEncrypt')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap" />
                        </controls:NavigationViewItem.Content>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind rootservice:ResourceService.DataEncryptVertifyResource.GetString('DataEncrypt')}"
                                Visibility="{x:Bind DataEncryptText.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </controls:NavigationViewItem>

                    <controls:NavigationViewItem Tag="DataVertify">
                        <controls:NavigationViewItem.Content>
                            <TextBlock
                                x:Name="DataVertifyText"
                                Text="{x:Bind rootservice:ResourceService.DataEncryptVertifyResource.GetString('DataVertify')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap" />
                        </controls:NavigationViewItem.Content>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind rootservice:ResourceService.DataEncryptVertifyResource.GetString('DataVertify')}"
                                Visibility="{x:Bind DataVertifyText.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </controls:NavigationViewItem>
                </controls:NavigationView.MenuItems>

                <Frame
                    x:Name="DataEncryptVertifyFrame"
                    Margin="16,0,30,0"
                    Navigated="{x:Bind OnNavigated}"
                    NavigationFailed="{x:Bind OnNavigationFailed}" />
            </controls:NavigationView>
        </SplitView.Content>
    </SplitView>
</Page>
