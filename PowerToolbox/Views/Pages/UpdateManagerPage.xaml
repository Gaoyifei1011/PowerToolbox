                                        Padding="16,0"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="{StaticResource ControlCornerRadius}">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">

                                            <TextBlock
                                                x:Name="TitleText"
                                                HorizontalAlignment="Left"
                                                IsTextSelectionEnabled="True"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind Title}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Content="{x:Bind Title}"
                                                        Visibility="{Binding ElementName=TitleText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                </ToolTipService.ToolTip>
                                            </TextBlock>

                                            <TextBlock
                                                x:Name="HistoryUpdateResultText"
                                                HorizontalAlignment="Left"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                IsTextSelectionEnabled="True"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="{x:Bind HistoryUpdateResult, Mode=OneWay}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Content="{x:Bind HistoryUpdateResult, Mode=OneWay}"
                                                        Visibility="{Binding ElementName=HistoryUpdateResultText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                </ToolTipService.ToolTip>
                                            </TextBlock>
                                        </StackPanel>

                                        <HyperlinkButton
                                            Grid.Column="1"
                                            Margin="20,0,0,0"
                                            Command="{StaticResource LearnMoreCommand}"
                                            CommandParameter="{x:Bind SupportURL}"
                                            Content="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('LearnMore')}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                    <!--  更新需要重启提示  -->
                    <controls:InfoBar
                        Height="50"
                        Margin="0,0,0,3"
                        IsClosable="True"
                        IsIconVisible="True"
                        IsOpen="{x:Bind IsUpdateCompletedNeedRebootPrompt, Mode=OneWay}"
                        Message="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('UpdateCompletedNeedRebootPrompt')}"
                        Severity="Warning"
                        Style="{StaticResource InfoBarStyle}"
                        Visibility="{x:Bind IsUpdateCompletedNeedRebootPrompt, Mode=OneWay}">

                        <controls:InfoBar.ActionButton>
                            <Button
                                Margin="20,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0">

                                <StackPanel
                                    Height="30"
                                    BorderBrush="{ThemeResource ButtonBorderBrush}"
                                    BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                                    CornerRadius="{ThemeResource ControlCornerRadius}"
                                    Orientation="Horizontal">

                                    <Button
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        BorderThickness="0,0,1,0"
                                        Click="{x:Bind OnRebootClicked}"
                                        Content="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('Reboot')}"
                                        CornerRadius="0">

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999" Content="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('RebootFinishUpdate')}" />
                                        </ToolTipService.ToolTip>
                                    </Button>

                                    <Button
                                        Width="35"
                                        VerticalAlignment="Stretch"
                                        BorderThickness="0"
                                        CornerRadius="0">

                                        <Button.Content>
                                            <controls:AnimatedIcon
                                                Width="12"
                                                Height="12"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                AutomationProperties.AccessibilityView="Raw">
                                                <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                <controls:AnimatedIcon.FallbackIconSource>
                                                    <controls:FontIconSource
                                                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                        FontSize="8"
                                                        Glyph="&#xE96E;"
                                                        IsTextScaleFactorEnabled="False" />
                                                </controls:AnimatedIcon.FallbackIconSource>
                                            </controls:AnimatedIcon>
                                        </Button.Content>

                                        <Button.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Click="{x:Bind OnHideNeedRebootPromptClicked}"
                                                    Tag="UpdateCompletedNeedReboot"
                                                    Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('HideNeedRebootPrompt')}">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xED1A;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Button.Flyout>

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999" Content="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('ViewMoreOptions')}" />
                                        </ToolTipService.ToolTip>
                                    </Button>
                                </StackPanel>
                            </Button>
                        </controls:InfoBar.ActionButton>
                    </controls:InfoBar>

                    <!--  预览体验计划更改重启提示  -->
                    <controls:InfoBar
                        Margin="0,0,0,3"
                        IsClosable="True"
                        IsIconVisible="True"
                        IsOpen="{x:Bind IsPreviewChannelChangedNeedRebootPrompt, Mode=OneWay}"
                        Message="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('PreviewChannelChangedNeedReboot')}"
                        Severity="Warning"
                        Visibility="{x:Bind IsPreviewChannelChangedNeedRebootPrompt, Mode=OneWay}">

                        <controls:InfoBar.ActionButton>
                            <Button
                                Margin="20,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0">

                                <StackPanel
                                    Height="30"
                                    BorderBrush="{ThemeResource ButtonBorderBrush}"
                                    BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                                    CornerRadius="{ThemeResource ControlCornerRadius}"
                                    Orientation="Horizontal">

                                    <Button
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        BorderThickness="0,0,1,0"
                                        Click="{x:Bind OnRebootClicked}"
                                        Content="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('Reboot')}"
                                        CornerRadius="0">

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999" Content="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('RebootFinishChange')}" />
                                        </ToolTipService.ToolTip>
                                    </Button>

                                    <Button
                                        Width="35"
                                        VerticalAlignment="Stretch"
                                        BorderThickness="0"
                                        CornerRadius="0">

                                        <Button.Content>
                                            <controls:AnimatedIcon
                                                Width="12"
                                                Height="12"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                AutomationProperties.AccessibilityView="Raw">
                                                <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                <controls:AnimatedIcon.FallbackIconSource>
                                                    <controls:FontIconSource
                                                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                        FontSize="8"
                                                        Glyph="&#xE96E;"
                                                        IsTextScaleFactorEnabled="False" />
                                                </controls:AnimatedIcon.FallbackIconSource>
                                            </controls:AnimatedIcon>
                                        </Button.Content>

                                        <Button.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Click="{x:Bind OnHideNeedRebootPromptClicked}"
                                                    Tag="PreviewChannelChangedNeedReboot"
                                                    Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('HideNeedRebootPrompt')}">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xED1A;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Button.Flyout>

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999" Content="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('ViewMoreOptions')}" />
                                        </ToolTipService.ToolTip>
                                    </Button>
                                </StackPanel>
                            </Button>
                        </controls:InfoBar.ActionButton>
                    </controls:InfoBar>

                    <StackPanel
                        Margin="0,0,0,5"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="5">

                        <FontIcon
                            Margin="0,2,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Glyph="&#xE76C;" />

                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('MoreOptions')}" />
                    </StackPanel>

                    <!--  更新设置  -->
                    <controls:Expander
                        Margin="0,0,0,3"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        IsExpanded="True">

                        <controls:Expander.Resources>
                            <SolidColorBrush x:Key="ExpanderChevronBackground" Color="Transparent" />
                            <SolidColorBrush x:Key="ExpanderChevronPointerOverBackground" Color="Transparent" />
                            <SolidColorBrush x:Key="ExpanderChevronPressedBackground" Color="Transparent" />
                        </controls:Expander.Resources>

                        <controls:Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="0,0,12,0"
                                    FontSize="16"
                                    Glyph="&#xE713;" />

                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('UpdateSettings')}" />
                            </Grid>
                        </controls:Expander.Header>

                        <controls:Expander.Content>
                            <StackPanel Padding="0">
                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('IncludePotentiallySupersededUpdate')}" />

                                    <StackPanel
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('IncludePotentiallySupersededUpdateOffContent')}"
                                            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsIncludePotentiallySupersededUpdate), Mode=OneWay}" />

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('IncludePotentiallySupersededUpdateOnContent')}"
                                            Visibility="{x:Bind IsIncludePotentiallySupersededUpdate, Mode=OneWay}" />

                                        <ToggleSwitch
                                            MinWidth="0"
                                            Margin="10,-2,-10,0"
                                            IsOn="{x:Bind IsIncludePotentiallySupersededUpdate, Mode=OneWay}"
                                            OffContent=""
                                            OnContent=""
                                            Toggled="{x:Bind OnIncludePotentiallySupersededUpdateToggled}" />
                                    </StackPanel>
                                </Grid>

                                <MenuFlyoutSeparator />

                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('UpdateSource')}" />

                                    <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedUpdateSource.Value, Mode=OneWay}">
                                        <controls:DropDownButton.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <controls:RadioMenuFlyoutItem
                                                    Click="{x:Bind OnUpdateSourceSelectClicked}"
                                                    GroupName="UpdateSourceRadioGroup"
                                                    IsChecked="{x:Bind x:Object.Equals(SelectedUpdateSource.Key, UpdateSourceList[0].Key), Mode=OneWay}"
                                                    Tag="{x:Bind UpdateSourceList[0]}"
                                                    Text="{x:Bind system:Convert.ToString(UpdateSourceList[0].Value)}" />

                                                <controls:RadioMenuFlyoutItem
                                                    Click="{x:Bind OnUpdateSourceSelectClicked}"
                                                    GroupName="UpdateSourceRadioGroup"
                                                    IsChecked="{x:Bind x:Object.Equals(SelectedUpdateSource.Key, UpdateSourceList[1].Key), Mode=OneWay}"
                                                    Tag="{x:Bind UpdateSourceList[1]}"
                                                    Text="{x:Bind system:Convert.ToString(UpdateSourceList[1].Value)}" />

                                                <controls:RadioMenuFlyoutItem
                                                    Click="{x:Bind OnUpdateSourceSelectClicked}"
                                                    GroupName="UpdateSourceRadioGroup"
                                                    IsChecked="{x:Bind x:Object.Equals(SelectedUpdateSource.Key, UpdateSourceList[2].Key), Mode=OneWay}"
                                                    Tag="{x:Bind UpdateSourceList[2]}"
                                                    Text="{x:Bind system:Convert.ToString(UpdateSourceList[2].Value)}" />

                                                <controls:RadioMenuFlyoutItem
                                                    Click="{x:Bind OnUpdateSourceSelectClicked}"
                                                    GroupName="UpdateSourceRadioGroup"
                                                    IsChecked="{x:Bind x:Object.Equals(SelectedUpdateSource.Key, UpdateSourceList[3].Key), Mode=OneWay}"
                                                    Tag="{x:Bind UpdateSourceList[3]}"
                                                    Text="{x:Bind system:Convert.ToString(UpdateSourceList[3].Value)}" />
                                            </MenuFlyout>
                                        </controls:DropDownButton.Flyout>
                                    </controls:DropDownButton>
                                </Grid>
                            </StackPanel>
                        </controls:Expander.Content>
                    </controls:Expander>

                    <!--  更新配置  -->
                    <controls:Expander
                        Margin="0,0,0,30"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        IsExpanded="True">

                        <controls:Expander.Resources>
                            <SolidColorBrush x:Key="ExpanderChevronBackground" Color="Transparent" />
                            <SolidColorBrush x:Key="ExpanderChevronPointerOverBackground" Color="Transparent" />
                            <SolidColorBrush x:Key="ExpanderChevronPressedBackground" Color="Transparent" />
                        </controls:Expander.Resources>

                        <controls:Expander.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="0,0,12,0"
                                    FontSize="16"
                                    Glyph="&#xEA18;" />

                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('UpdateConfiguration')}" />
                            </Grid>
                        </controls:Expander.Header>

                        <controls:Expander.Content>
                            <ContentControl HorizontalContentAlignment="Stretch">

                                <StackPanel Padding="0">
                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('ExcludeDrivers')}" />

                                        <StackPanel
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('ExcludeDriversOffContent')}"
                                                Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsExcludeDrivers), Mode=OneWay}" />

                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('ExcludeDriversOnContent')}"
                                                Visibility="{x:Bind IsExcludeDrivers, Mode=OneWay}" />

                                            <ToggleSwitch
                                                MinWidth="0"
                                                Margin="10,-2,-10,0"
                                                IsOn="{x:Bind IsExcludeDrivers, Mode=OneWay}"
                                                OffContent=""
                                                OnContent=""
                                                Toggled="{x:Bind OnExcludeDriversToggled}" />
                                        </StackPanel>
                                    </Grid>

                                    <MenuFlyoutSeparator />

                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('CleanUpdateHistory')}" />

                                        <Button
                                            Grid.Column="1"
                                            MinWidth="0"
                                            Click="{x:Bind OnCleanUpdateHistoryClicked}"
                                            IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsCleaning), Mode=OneWay}">

                                            <Button.Content>
                                                <Grid>
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('Clean')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsCleaning), Mode=OneWay}" />
                                                    <TextBlock Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('Cleaning')}" Visibility="{x:Bind IsCleaning, Mode=OneWay}" />
                                                </Grid>
                                            </Button.Content>
                                        </Button>
                                    </Grid>

                                    <MenuFlyoutSeparator />

                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('ForceAccessWIP')}" />

                                        <controls:DropDownButton Grid.Column="1" Content="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('SelectChannel')}">
                                            <controls:DropDownButton.Flyout>
                                                <MenuFlyout Placement="Bottom">
                                                    <MenuFlyoutItem
                                                        Click="{x:Bind OnPreviewChannelSelectClicked}"
                                                        Tag="ExitPreviewChannel"
                                                        Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('ExitPreviewChannel')}" />

                                                    <MenuFlyoutSeparator />

                                                    <MenuFlyoutItem
                                                        Click="{x:Bind OnPreviewChannelSelectClicked}"
                                                        Tag="ReleasePreview"
                                                        Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('InsiderReleasePreview')}" />

                                                    <MenuFlyoutItem
                                                        Click="{x:Bind OnPreviewChannelSelectClicked}"
                                                        Tag="Beta"
                                                        Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('InsiderBeta')}" />

                                                    <MenuFlyoutItem
                                                        Click="{x:Bind OnPreviewChannelSelectClicked}"
                                                        Tag="Dev"
                                                        Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('InsiderDev')}" />

                                                    <MenuFlyoutItem
                                                        Click="{x:Bind OnPreviewChannelSelectClicked}"
                                                        Tag="Canary"
                                                        Text="{x:Bind rootservice:ResourceService.UpdateManagerResource.GetString('InsiderCanary')}" />
                                                </MenuFlyout>
                                            </controls:DropDownButton.Flyout>
                                        </controls:DropDownButton>
                                    </Grid>
                                </StackPanel>
                            </ContentControl>
                        </controls:Expander.Content>
                    </controls:Expander>
                </StackPanel>
            </ScrollViewer>
        </controls:NavigationView>
    </Grid>
</Page>
