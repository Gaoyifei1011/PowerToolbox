<Page
    x:Class="PowerToolbox.Views.Pages.FileUnlockPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:class="using:PowerToolbox.Extensions.DataType.Class"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:PowerToolbox.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:PowerToolbox.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:PowerToolbox.Models"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    xmlns:sys="using:System"
    AllowDrop="True"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <CornerRadius x:Key="ListViewItemCornerRadius">0</CornerRadius>
            <SolidColorBrush x:Key="ListViewItemBackgroundPointerOver" Color="Transparent" />
            <SolidColorBrush x:Key="ListViewItemBackgroundPressed" Color="Transparent" />

            <SolidColorBrush x:Key="HyperlinkButtonBackgroundPointerOver" Color="Transparent" />
            <SolidColorBrush x:Key="HyperlinkButtonBackgroundPressed" Color="Transparent" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="30,15,30,0"
            FontSize="22"
            Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileUnlock')}" />

        <TextBlock
            Grid.Row="1"
            Margin="32,3,32,3"
            FontSize="14"
            Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileUnlockDescription')}" />

        <!--  文件解锁结果控件  -->
        <Grid
            Grid.Row="2"
            Margin="30,0,30,3"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Height="35"
                Padding="6,0,0,0"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="FileFolderNameHeaderText"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderName')}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            MaxWidth="9999"
                            Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderName')}"
                            Visibility="{x:Bind FileFolderNameHeaderText.IsTextTrimmed, Mode=OneWay}" />
                    </ToolTipService.ToolTip>
                </TextBlock>

                <TextBlock
                    x:Name="FileFolderTypeHeaderText"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderType')}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            MaxWidth="9999"
                            Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderType')}"
                            Visibility="{x:Bind FileFolderTypeHeaderText.IsTextTrimmed, Mode=OneWay}" />
                    </ToolTipService.ToolTip>
                </TextBlock>

                <TextBlock
                    x:Name="FileFolderAmountHeaderText"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderAmount')}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap">

                    <ToolTipService.ToolTip>
                        <ToolTip MaxWidth="9999">
                            <ToolTip.Content>
                                <StackPanel>
                                    <TextBlock Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderAmount')}" />
                                    <TextBlock Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileAmount')}" />
                                    <TextBlock Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FolderAmount')}" />
                                </StackPanel>
                            </ToolTip.Content>
                        </ToolTip>
                    </ToolTipService.ToolTip>
                </TextBlock>

                <TextBlock
                    x:Name="FileFolderStatusHeaderText"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderStatus')}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            MaxWidth="9999"
                            Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderStatus')}"
                            Visibility="{x:Bind FileFolderStatusHeaderText.IsTextTrimmed, Mode=OneWay}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
            </Grid>

            <ListView
                Grid.Row="1"
                Margin="0,0,0,3"
                IsItemClickEnabled="True"
                ItemsSource="{x:Bind FileUnlockCollection}"
                SelectionMode="None">

                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="MinHeight" Value="0" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ItemsControl.ItemContainerTransitions>
                    <TransitionCollection />
                </ItemsControl.ItemContainerTransitions>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:FileUnlockModel">
                        <Grid
                            Height="35"
                            Padding="6,0,0,0"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0,0,0,1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="FileFolderNameText"
                                Grid.Column="0"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind FileFolderName}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind FileFolderPath, Mode=OneWay}"
                                        Placement="Mouse"
                                        Visibility="{x:Bind converter:ValueConverterHelper.StringToVisibilityConvert(FileFolderPath), Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="FileFolderTypeText"
                                Grid.Column="1"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind FileFolderType}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind FileFolderType}"
                                        Placement="Mouse"
                                        Visibility="{Binding ElementName=FileFolderTypeText, Path=IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="FileFolderAmountText"
                                Grid.Column="2"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind FileFolderAmount}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind FileFolderAmount}"
                                        Placement="Mouse"
                                        Visibility="{Binding ElementName=FileFolderAmountText, Path=IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="FileFolderNotStartedText"
                                Grid.Column="3"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderNotStarted')}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckFileUnlockState(FileUnlockState, enum:FileUnlockState.NotStarted), Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderNotStarted')}"
                                        Placement="Mouse"
                                        Visibility="{Binding ElementName=FileFolderNotStartedText, Path=IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <StackPanel
                                Grid.Column="3"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Orientation="Horizontal"
                                Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckFileUnlockState(FileUnlockState, enum:FileUnlockState.Processing), Mode=OneWay}">

                                <controls:ProgressRing
                                    Width="14"
                                    Height="14"
                                    Margin="0,0,6,0"
                                    IsActive="{x:Bind x:Object.Equals(FileUnlockState, enum:FileUnlockState.Processing), Mode=OneWay}"
                                    IsIndeterminate="False"
                                    Value="{x:Bind FileUnlockProgressingPercentage, Mode=OneWay}" />

                                <TextBlock
                                    x:Name="FileFolderProcessingText"
                                    Grid.Column="3"
                                    MinWidth="50"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    TextAlignment="Left"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <Run Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderProcessing')}" />
                                    <Run Text="{x:Bind sys:Convert.ToString(FileUnlockFinishedCount), Mode=OneWay}" />
                                    <Run Text="/" />
                                    <Run Text="{x:Bind sys:Convert.ToString(SubFileList.Count)}" />

                                    <ToolTipService.ToolTip>
                                        <ToolTip MaxWidth="9999" Placement="Mouse">
                                            <TextBlock>
                                                <Run Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderProcessing')}" />
                                                <Run Text="{x:Bind sys:Convert.ToString(FileUnlockFinishedCount), Mode=OneWay}" />
                                                <Run Text="/" />
                                                <Run Text="{x:Bind sys:Convert.ToString(SubFileList.Count)}" />
                                            </TextBlock>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock
                                x:Name="FileFolderCancelledText"
                                Grid.Column="3"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderCancelled')}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckFileUnlockState(FileUnlockState, enum:FileUnlockState.Cancelled), Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderCancelled')}"
                                        Placement="Mouse"
                                        Visibility="{Binding ElementName=FileFolderCancelledText, Path=IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="FileFolderFailedText"
                                Grid.Column="3"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderFailed')}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckFileUnlockState(FileUnlockState, enum:FileUnlockState.Failed), Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderFailed')}"
                                        Placement="Mouse"
                                        Visibility="{Binding ElementName=FileFolderFailedText, Path=IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="FileFolderSuccessfullyText"
                                Grid.Column="3"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderSuccessfully')}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckFileUnlockState(FileUnlockState, enum:FileUnlockState.Successfully), Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('FileFolderSuccessfully')}"
                                        Placement="Mouse"
                                        Visibility="{Binding ElementName=FileFolderSuccessfullyText, Path=IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock
                Grid.Row="1"
                Margin="0,10,0,0"
                VerticalAlignment="Top"
                Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('EmptyList')}"
                TextAlignment="Center"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(FileUnlockCollection.Count), Mode=OneWay}" />
        </Grid>

        <!--  文件解锁控制栏  -->
        <Grid
            Grid.Row="3"
            Margin="30,0,30,3"
            ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Click="{x:Bind OnSelectFileClicked}"
                Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('SelectFile')}"
                IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsModifyingNow), Mode=OneWay}" />

            <Button
                Grid.Column="1"
                Click="{x:Bind OnSelectFolderClicked}"
                Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('SelectFolder')}"
                IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsModifyingNow), Mode=OneWay}" />

            <Button
                Grid.Column="2"
                Click="{x:Bind OnClearListClicked}"
                Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('ClearList')}"
                IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsModifyingNow), Mode=OneWay}" />

            <Button
                Grid.Column="3"
                Click="{x:Bind OnOpenTaskManagerClicked}"
                Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('OpenTaskManager')}" />

            <TextBlock
                Grid.Column="4"
                VerticalAlignment="Center"
                Text="{x:Bind x:String.Format(TotalString, FileUnlockCollection.Count), Mode=OneWay}"
                TextAlignment="Center" />

            <HyperlinkButton
                Grid.Column="5"
                Margin="0,0,10,0"
                Click="{x:Bind OnViewErrorInformationClicked}"
                Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('ViewErrorInformation')}" />
            <!--  Visibility="{x:Bind IsOperationFailed, Mode=OneWay}"  -->
            <controls:ProgressRing
                Grid.Column="6"
                Width="25"
                Height="25"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                IsActive="True"
                IsIndeterminate="True"
                Visibility="{x:Bind IsModifyingNow, Mode=OneWay}" />

            <TextBlock
                Grid.Column="7"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('ModifyingNow')}"
                Visibility="{x:Bind IsModifyingNow, Mode=OneWay}" />

            <Button
                Grid.Column="8"
                Click="{x:Bind OnUnlockClicked}"
                Content="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('Unlock')}"
                IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsModifyingNow), Mode=OneWay}"
                Style="{StaticResource AccentButtonStyle}"
                Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsModifyingNow), Mode=OneWay}" />

            <Button
                Grid.Column="8"
                Click="{x:Bind OnCancelUnlockClicked}"
                IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperationCancelling), Mode=OneWay}"
                Style="{StaticResource AccentButtonStyle}"
                Visibility="{x:Bind IsModifyingNow, Mode=OneWay}">

                <Button.Content>
                    <Grid>
                        <TextBlock Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('CancelUnlock')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsOperationCancelling), Mode=OneWay}" />
                        <TextBlock Text="{x:Bind rootservice:ResourceService.FileUnlockResource.GetString('Cancelling')}" Visibility="{x:Bind IsOperationCancelling, Mode=OneWay}" />
                    </Grid>
                </Button.Content>
            </Button>
        </Grid>
    </Grid>
</Page>
