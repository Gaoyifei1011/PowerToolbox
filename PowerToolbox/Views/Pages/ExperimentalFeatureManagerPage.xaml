<Page
    x:Class="PowerToolbox.Views.Pages.ExperimentalFeatureManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PowerToolbox.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    mc:Ignorable="d">

    <SplitView
        x:Name="ExperimentalFeatureSplitView"
        DisplayMode="Overlay"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="30,15,30,0"
                    Orientation="Horizontal"
                    Spacing="5">

                    <TextBlock
                        HorizontalAlignment="Left"
                        FontSize="22"
                        Text="{x:Bind rootservice:ResourceService.ExperimentalFeatureManagerResource.GetString('ExperimentalFeatureManager')}" />

                    <TextBlock VerticalAlignment="Bottom" Text="{x:Bind ExperimentalFeatureDescription, Mode=OneWay}" />
                </StackPanel>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>
