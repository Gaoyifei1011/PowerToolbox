<Page
    x:Class="PowerToolbox.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:backdrophelper="using:PowerToolbox.Helpers.Backdrop"
    xmlns:converter="using:PowerToolbox.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:roothelper="using:PowerToolbox.Helpers.Root"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <TransitionCollection x:Name="SuppressNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SuppressNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="LeftSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromLeft" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="RightSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromRight" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Resources>

    <SplitView
        x:Name="SettingsSplitView"
        DisplayMode="Overlay"
        OpenPaneLength="320"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="16,15,30,0"
                    FontSize="22"
                    Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('Settings')}" />

                <SelectorBar
                    x:Name="SettingsSelctorBar"
                    Grid.Row="1"
                    Margin="6,6,30,3"
                    Padding="0"
                    HorizontalAlignment="Left"
                    SelectedItem="{x:Bind SelectedItem, Mode=OneWay}">

                    <SelectorBarItem
                        Padding="12,5"
                        IsTapEnabled="True"
                        Tag="{x:Bind PageList[0]}"
                        Tapped="{x:Bind OnSelectorBarTapped}"
                        Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('General')}" />

                    <SelectorBarItem
                        Padding="12,5"
                        IsTapEnabled="True"
                        Tag="{x:Bind PageList[1]}"
                        Tapped="{x:Bind OnSelectorBarTapped}"
                        Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('Advanced')}" />

                    <SelectorBarItem
                        Padding="12,5"
                        IsTapEnabled="True"
                        Tag="{x:Bind PageList[2]}"
                        Tapped="{x:Bind OnSelectorBarTapped}"
                        Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('About')}" />
                </SelectorBar>

                <Grid Grid.Row="2" Margin="-14,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <MenuFlyoutSeparator Grid.Row="0" Margin="34,0,35,3" />

                    <!--  设置内容  -->
                    <Frame
                        x:Name="SettingsFrame"
                        Grid.Row="1"
                        Navigated="{x:Bind OnNavigated}"
                        NavigationFailed="{x:Bind OnNavigationFailed}" />
                </Grid>

                <Button
                    Grid.Row="1"
                    Width="34"
                    Height="34"
                    Margin="0,10,30,0"
                    Padding="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">

                    <Button.Content>
                        <FontIcon FontSize="16" Glyph="&#xE712;" />
                    </Button.Content>

                    <Button.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Click="{x:Bind OnRestartAppsClicked}" Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('RestartApp')}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE895;" />
                                </MenuFlyoutItem.Icon>

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind rootservice:ResourceService.SettingsResource.GetString('RestartAppToolTip')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Click="{x:Bind OnSettingsInstructionClicked}" Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('SettingsInstruction')}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE946;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem
                                Click="{x:Bind OnRunAsAdministratorClicked}"
                                Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('RunAsAdministrator')}"
                                Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(roothelper:RuntimeHelper.IsElevated)}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE7EF;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>

                            <MenuFlyoutSeparator />

                            <MenuFlyoutItem Click="{x:Bind OnPinToDesktopClicked}" Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('PinToDesktop')}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE70A;" />
                                </MenuFlyoutItem.Icon>

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind rootservice:ResourceService.SettingsResource.GetString('PinToDesktopToolTip')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Click="{x:Bind OnPinToStartScreenClicked}" Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('PinToStartScreen')}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8FC;" />
                                </MenuFlyoutItem.Icon>

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind rootservice:ResourceService.SettingsResource.GetString('PinToStartScreenToolTip')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Click="{x:Bind OnPinToTaskbarClicked}" Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('PinToTaskbar')}">

                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE75B;" />
                                </MenuFlyoutItem.Icon>

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind rootservice:ResourceService.SettingsResource.GetString('PinToTaskbarToolTip')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            MaxWidth="9999"
                            Content="{x:Bind rootservice:ResourceService.SettingsResource.GetString('ViewMore')}"
                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                    </ToolTipService.ToolTip>
                </Button>
            </Grid>
        </SplitView.Content>

        <SplitView.Pane>
            <!--  设置说明  -->
            <Grid
                Margin="0,10,0,0"
                Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                CornerRadius="4,0,0,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="16,0,6,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Glyph="&#xE946;" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,0,2"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('SettingsInstruction')}" />

                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnCloseClicked}"
                        Style="{StaticResource AlternateCloseButtonStyle}">

                        <Button.Content>
                            <FontIcon
                                Margin="4"
                                FontSize="16"
                                Glyph="&#xE711;" />
                        </Button.Content>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind rootservice:ResourceService.SettingsResource.GetString('Close')}"
                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                        </ToolTipService.ToolTip>
                    </Button>
                </Grid>

                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Disabled"
                    HorizontalScrollMode="Disabled"
                    VerticalScrollBarVisibility="Visible"
                    VerticalScrollMode="Enabled">

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('Language')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('LanguageDescription')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="2"
                            Margin="16,0,16,5"
                            Spacing="5">

                            <TextBlock HorizontalAlignment="Left">
                                <Hyperlink Click="{x:Bind OnAppSettingsClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind rootservice:ResourceService.SettingsResource.GetString('AppSettings')}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </SplitView.Pane>
    </SplitView>
</Page>
