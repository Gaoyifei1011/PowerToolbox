<Page
    x:Class="PowerToolbox.Views.Pages.ShellMenuEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:controlshelper="using:PowerToolbox.Helpers.Controls"
    xmlns:converter="using:PowerToolbox.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    xmlns:system="using:System"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
        <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Height="60"
            Margin="30,0,30,3"
            Padding="16,0,2,0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Operation')}" />

            <CommandBar
                Grid.Column="2"
                VerticalAlignment="Center"
                DefaultLabelPosition="Right"
                Opening="{x:Bind controlshelper:CommandBarHelper.OnOpening}">

                <CommandBar.PrimaryCommands>
                    <AppBarButton
                        VerticalAlignment="Center"
                        Click="{x:Bind OnSaveClicked}"
                        Label="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Save')}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74E;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>
            </CommandBar>
        </Grid>

        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">

            <StackPanel Margin="30,0,30,30">

                <!--  菜单标题设置  -->
                <Grid
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE71D;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuTitle')}" />

                    <TextBox
                        x:Name="MenuTitleTextBox"
                        Grid.Column="2"
                        Width="350"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuTitlePHText')}"
                        Text="{x:Bind MenuTitleText, Mode=OneWay}"
                        TextChanged="{x:Bind OnTitleTextChanged}" />
                </Grid>

                <!--  菜单图标设置  -->
                <controls:Expander
                    Margin="0,0,0,2"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE8B9;" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuIcon')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0" HorizontalAlignment="Stretch">
                            <!--  使用图标  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseIcon')}" />

                                <StackPanel
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseIconOffContent')}"
                                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(UseIcon), Mode=OneWay}" />

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseIconOnContent')}"
                                        Visibility="{x:Bind UseIcon, Mode=OneWay}" />

                                    <ToggleSwitch
                                        MinWidth="0"
                                        Margin="10,-2,-10,0"
                                        IsOn="{x:Bind UseIcon, Mode=OneWay}"
                                        OffContent=""
                                        OnContent=""
                                        Toggled="{x:Bind OnUseIconToggled}" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Visibility="{x:Bind UseIcon, Mode=OneWay}">

                                <MenuFlyoutSeparator />

                                <!--  是否使用应用程序图标  -->
                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseProgramIcon')}" />

                                    <StackPanel
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseProgramIconOffContent')}"
                                            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(UseProgramIcon), Mode=OneWay}" />

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseProgramIconOnContent')}"
                                            Visibility="{x:Bind UseProgramIcon, Mode=OneWay}" />

                                        <ToggleSwitch
                                            MinWidth="0"
                                            Margin="10,-2,-10,0"
                                            IsOn="{x:Bind UseProgramIcon, Mode=OneWay}"
                                            OffContent=""
                                            OnContent=""
                                            Toggled="{x:Bind OnUseProgramIconToggled}" />
                                    </StackPanel>
                                </Grid>

                                <StackPanel Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(UseProgramIcon), Mode=OneWay}">

                                    <MenuFlyoutSeparator />

                                    <!--  是否启用主题图标  -->
                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseThemeIcon')}" />

                                        <StackPanel
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseThemeIconOffContent')}"
                                                Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(UseProgramIcon), Mode=OneWay}" />

                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UseThemeIconOnContent')}"
                                                Visibility="{x:Bind UseThemeIcon, Mode=OneWay}" />

                                            <ToggleSwitch
                                                MinWidth="0"
                                                Margin="10,-2,-10,0"
                                                IsOn="{x:Bind UseThemeIcon, Mode=OneWay}"
                                                OffContent=""
                                                OnContent=""
                                                Toggled="{x:Bind OnUseThemeIconToggled}" />
                                        </StackPanel>
                                    </Grid>

                                    <MenuFlyoutSeparator />

                                    <!--  默认图标  -->
                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        ColumnSpacing="10"
                                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(UseThemeIcon), Mode=OneWay}">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('DefaultIcon')}" />

                                        <StackPanel
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">

                                            <controls:ImageIcon
                                                Width="28"
                                                Height="28"
                                                VerticalAlignment="Center"
                                                Source="{x:Bind DefaultIconImage, Mode=OneWay}" />

                                            <TextBox
                                                Width="300"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                IsReadOnly="True"
                                                PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UnknownDefaultIconPath')}"
                                                Text="{x:Bind DefaultIconPath, Mode=OneWay}" />
                                        </StackPanel>

                                        <Button
                                            x:Name="MenuDefaultIconBrowserButton"
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            Click="{x:Bind OnDefaultIconBrowserClicked}"
                                            Content="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Browser')}" />
                                    </Grid>

                                    <StackPanel Visibility="{x:Bind UseThemeIcon, Mode=OneWay}">

                                        <!--  浅色主题图标  -->
                                        <Grid
                                            Height="52"
                                            Padding="44,0,16,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            ColumnSpacing="10"
                                            Visibility="{x:Bind UseThemeIcon, Mode=OneWay}">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('LightThemeIcon')}" />

                                            <StackPanel
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">

                                                <controls:ImageIcon
                                                    Width="28"
                                                    Height="28"
                                                    VerticalAlignment="Center"
                                                    Source="{x:Bind LightThemeIconImage, Mode=OneWay}" />

                                                <TextBox
                                                    Width="300"
                                                    Margin="10,0,0,0"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UnknownLightThemeIconPath')}"
                                                    Text="{x:Bind LightThemeIconPath, Mode=OneWay}" />
                                            </StackPanel>

                                            <Button
                                                x:Name="MenuLigthThemeIconBrowserButton"
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Click="{x:Bind OnLightThemeIconBrowserClicked}"
                                                Content="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Browser')}" />
                                        </Grid>

                                        <MenuFlyoutSeparator Visibility="{x:Bind UseThemeIcon, Mode=OneWay}" />

                                        <!--  深色主题图标  -->
                                        <Grid
                                            Height="52"
                                            Padding="44,0,16,0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center"
                                            ColumnSpacing="10"
                                            Visibility="{x:Bind UseThemeIcon, Mode=OneWay}">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('DarkThemeIcon')}" />

                                            <StackPanel
                                                Grid.Column="1"
                                                HorizontalAlignment="Right"
                                                Orientation="Horizontal">

                                                <controls:ImageIcon
                                                    Width="28"
                                                    Height="28"
                                                    VerticalAlignment="Center"
                                                    Source="{x:Bind DarkThemeIconImage, Mode=OneWay}" />

                                                <TextBox
                                                    Width="300"
                                                    Margin="10,0,0,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('UnknownDarkThemeIconPath')}"
                                                    Text="{x:Bind DarkThemeIconPath, Mode=OneWay}" />
                                            </StackPanel>

                                            <Button
                                                x:Name="MenuDarkThemeIconBrowserButton"
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Click="{x:Bind OnDarkThemeIconBrowserClicked}"
                                                Content="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Browser')}" />
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>

                <!--  程序路径  -->
                <Grid
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE8A1;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuProgramPath')}" />

                    <TextBox
                        Grid.Column="2"
                        Width="300"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsReadOnly="True"
                        PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuProgramPathPHText')}"
                        Text="{x:Bind MenuProgramPathText, Mode=OneWay}" />

                    <Button
                        x:Name="MenuProgramBrowserButton"
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnMenuProgramPathBrowserClicked}"
                        Content="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Browser')}" />
                </Grid>

                <!--  菜单参数  -->
                <Grid
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE765;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuParameter')}" />

                    <TextBox
                        Grid.Column="2"
                        Width="350"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        PlaceholderText="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuParameterPHText')}"
                        Text="{x:Bind MenuParameterText, Mode=OneWay}"
                        TextChanged="{x:Bind OnMenuParameterTextChanged}" />
                </Grid>

                <!--  提权运行  -->
                <Grid
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE7EF;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('RunAsAdministrator')}" />

                    <StackPanel
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('IsAlwaysRunAsAdministratorOffContent')}"
                            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsAlwaysRunAsAdministrator), Mode=OneWay}" />

                        <TextBlock
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('IsAlwaysRunAsAdministratorOnContent')}"
                            Visibility="{x:Bind IsAlwaysRunAsAdministrator, Mode=OneWay}" />

                        <ToggleSwitch
                            MinWidth="0"
                            Margin="10,-2,-10,0"
                            IsOn="{x:Bind IsAlwaysRunAsAdministrator, Mode=OneWay}"
                            OffContent=""
                            OnContent=""
                            Toggled="{x:Bind OnIsAlwaysRunAsAdministratorToggled}" />
                    </StackPanel>
                </Grid>

                <!--  文件夹匹配类型  -->
                <Grid
                    Height="60"
                    Margin="0,0,0,2"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE8B7;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuFolderMatch')}" />

                    <StackPanel
                        Grid.Column="2"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="10">

                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Background')}"
                            IsChecked="{x:Bind FolderBackgroundMatch, Mode=TwoWay}" />

                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Desktop')}"
                            IsChecked="{x:Bind FolderDesktopMatch, Mode=TwoWay}" />

                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Directory')}"
                            IsChecked="{x:Bind FolderDirectoryMatch, Mode=TwoWay}" />

                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('Drive')}"
                            IsChecked="{x:Bind FolderDriveMatch, Mode=TwoWay}" />
                    </StackPanel>
                </Grid>

                <!--  文件匹配类型  -->
                <controls:Expander
                    Margin="0,0,0,2"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE8A5;" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuFileMatch')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0" HorizontalAlignment="Stretch">
                            <!--  文件匹配规则选择  -->
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuFileMatchRule')}" />

                                <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedFileMatchRule.Value, Mode=OneWay}">
                                    <controls:DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedFileMatchRule.Key, FileMatchRuleList[0].Key), Mode=OneWay}"
                                                Tag="{x:Bind FileMatchRuleList[0]}"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[0].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedFileMatchRule.Key, FileMatchRuleList[1].Key), Mode=OneWay}"
                                                Tag="{x:Bind FileMatchRuleList[1]}"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[1].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedFileMatchRule.Key, FileMatchRuleList[2].Key), Mode=OneWay}"
                                                Tag="{x:Bind FileMatchRuleList[2]}"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[2].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedFileMatchRule.Key, FileMatchRuleList[3].Key), Mode=OneWay}"
                                                Tag="{x:Bind FileMatchRuleList[3]}"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[3].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Click="{x:Bind OnFileMatchRuleClicked}"
                                                GroupName="FileMatchRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedFileMatchRule.Key, FileMatchRuleList[4].Key), Mode=OneWay}"
                                                Tag="{x:Bind FileMatchRuleList[4]}"
                                                Text="{x:Bind system:Convert.ToString(FileMatchRuleList[4].Value)}" />
                                        </MenuFlyout>
                                    </controls:DropDownButton.Flyout>
                                </controls:DropDownButton>
                            </Grid>

                            <StackPanel Visibility="{x:Bind NeedInputMatchFormat, Mode=OneWay}">

                                <!--  文件匹配格式  -->
                                <MenuFlyoutSeparator />

                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('MenuFileMatchFormat')}" />

                                    <TextBox
                                        x:Name="MenuFileMatchFormatTextBox"
                                        Grid.Column="1"
                                        Width="350"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        PlaceholderText="{x:Bind MenuFileMatchFormatPHText, Mode=OneWay}"
