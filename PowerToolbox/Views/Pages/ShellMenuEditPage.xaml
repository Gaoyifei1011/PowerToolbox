                <!--  菜单设置说明  -->
                <controls:Expander
                    Margin="0,0,0,2"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE82F;" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('EditMenuInstruction')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Margin="0">
                            <TextBlock
                                Margin="44,10,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('TipContent1')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="44,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('TipContent2')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="44,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('TipContent3')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="44,0,16,10"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ShellMenuEditResource.GetString('TipContent4')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
