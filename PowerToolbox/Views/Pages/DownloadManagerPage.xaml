<Page
    x:Class="PowerToolbox.Views.Pages.DownloadManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:backdrophelper="using:PowerToolbox.Helpers.Backdrop"
    xmlns:class="using:PowerToolbox.Extensions.DataType.Class"
    xmlns:converter="using:PowerToolbox.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:PowerToolbox.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:PowerToolbox.Models"
    xmlns:roothelper="using:PowerToolbox.Helpers.Root"
    xmlns:rootservice="using:PowerToolbox.Services.Root"
    xmlns:system="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <class:ExecuteCommand x:Name="ContinueCommand" ExecuteRequested="{x:Bind OnContinueExecuteRequested}" />
        <class:ExecuteCommand x:Name="PauseCommand" ExecuteRequested="{x:Bind OnPauseExecuteRequested}" />
        <class:ExecuteCommand x:Name="OpenFolderCommand" ExecuteRequested="{x:Bind OnOpenFolderExecuteRequested}" />
        <class:ExecuteCommand x:Name="DeleteCommand" ExecuteRequested="{x:Bind OnDeleteExecuteRequested}" />
        <class:ExecuteCommand x:Name="DeleteWithFileCommand" ExecuteRequested="{x:Bind OnDeleteWithFileExecuteRequested}" />
        <class:ExecuteCommand x:Name="ShareFileCommand" ExecuteRequested="{x:Bind OnShareFileExecuteRequested}" />
        <class:ExecuteCommand x:Name="FileInformationCommand" ExecuteRequested="{x:Bind OnFileInformationExecuteRequested}" />
    </Page.Resources>

    <SplitView
        x:Name="DownloadSplitView"
        DisplayMode="Overlay"
        OpenPaneLength="320"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="30,15,30,0"
                    FontSize="22"
                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadManager')}" />

                <!--  下载管理控制栏  -->
                <Grid
                    Grid.Row="1"
                    Height="60"
                    Margin="30,5,30,3"
                    Padding="16,0,0,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE74C;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Operation')}" />

                    <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

                    <TextBlock
                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadEmpty')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DownloadCollection.Count), Mode=OneWay}" />

                    <TextBlock
                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Bind x:String.Format(DownloadingCountInfoString, DownloadCollection.Count), Mode=OneWay}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DownloadCollection.Count), Mode=OneWay}" />

                    <CommandBar
                        Grid.Column="4"
                        VerticalAlignment="Center"
                        DefaultLabelPosition="Right">

                        <CommandBar.PrimaryCommands>
                            <AppBarButton Click="{x:Bind OnAddTaskClicked}" Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('AddTask')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE710;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnContinueAllClicked}"
                                IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadCollection.Count), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('ContinueAll')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE74B;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnPauseDownloadClicked}"
                                IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadCollection.Count), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('PauseDownload')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE769;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </CommandBar.PrimaryCommands>
                    </CommandBar>

                    <Button
                        Grid.Column="5"
                        MinHeight="{ThemeResource AppBarThemeCompactHeight}"
                        Margin="-6,0,0,0"
                        Padding="{ThemeResource CommandBarMoreButtonMargin}"
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource CommandBarForeground}"
                        IsAccessKeyScope="True"
                        Style="{ThemeResource EllipsisButton}">

                        <Button.Content>
                            <FontIcon
                                Height="{ThemeResource AppBarExpandButtonCircleDiameter}"
                                VerticalAlignment="Center"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                FontSize="20"
                                Glyph="&#xE712;" />
                        </Button.Content>

                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem
                                    Click="{x:Bind OnDeleteDownloadClicked}"
                                    IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadCollection.Count), Mode=OneWay}"
                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DeleteDownload')}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE74D;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>

                                <MenuFlyoutItem Click="{x:Bind OnOpenFolderClicked}" Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('OpenFolder')}">

                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8B7;" />
                                    </MenuFlyoutItem.Icon>

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('OpenFolderToolTip')}"
                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                    </ToolTipService.ToolTip>
                                </MenuFlyoutItem>

                                <MenuFlyoutItem Click="{x:Bind OnUseInstructionClicked}" Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('UseInstruction')}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE946;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>

                                <MenuFlyoutSeparator />

                                <MenuFlyoutItem Click="{x:Bind OnDownloadSettingsClicked}" Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadSettings')}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE713;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('ViewMore')}"
                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                        </ToolTipService.ToolTip>
                    </Button>
                </Grid>

                <!--  下载内容空提示栏  -->
                <Grid
                    Grid.Row="2"
                    Height="60"
                    Margin="30,0,30,0"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DownloadCollection.Count), Mode=OneWay}">

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('EmptyDescription')}"
                        TextAlignment="Center" />
                </Grid>

                <!--  下载内容列表控件  -->
                <ListView
                    Grid.Row="3"
                    Padding="30,0,30,30"
                    ItemsSource="{x:Bind DownloadCollection}"
                    SelectionMode="None"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DownloadCollection.Count), Mode=OneWay}">

                    <ListView.ItemContainerStyle>
                        <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="MinHeight" Value="0 " />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ItemsControl.ItemContainerTransitions>
                        <TransitionCollection />
                    </ItemsControl.ItemContainerTransitions>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:DownloadModel">
                            <Grid
                                Height="60"
                                Margin="0,0,0,2"
                                Padding="16,0"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ControlCornerRadius}">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="6,0,18,0"
                                    FontSize="18"
                                    FontWeight="Thin"
                                    Glyph="&#xE958;"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Queued, x:False), Mode=OneWay}" />

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="6,0,18,0"
                                    FontSize="18"
                                    FontWeight="Thin"
                                    Glyph="&#xE896;"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="6,0,18,0"
                                    FontSize="18"
                                    FontWeight="Thin"
                                    Glyph="&#xE769;"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused, x:False), Mode=OneWay}" />

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="6,0,18,0"
                                    FontSize="18"
                                    FontWeight="Thin"
                                    Glyph="&#xEA39;"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Failed, x:False), Mode=OneWay}" />

                                <Grid
                                    Grid.Column="0"
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,12,0"
                                    HorizontalAlignment="Left"
                                    Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:False), Mode=OneWay}">

                                    <ImageIcon Source="{x:Bind IconImage, Mode=OneWay}" />
                                </Grid>

                                <Grid
                                    Grid.Column="2"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    RowSpacing="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="FileNameText"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{x:Bind FileName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind FileName}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                    Visibility="{Binding ElementName=FileNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{x:Bind roothelper:SpeedHelper.ConvertSpeedToString(DownloadSpeed), Mode=OneWay}"
                                            TextAlignment="Right"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip MaxWidth="9999" Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">
                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('CurrentSpeed')}" />
                                                        <Run Text="{x:Bind roothelper:SpeedHelper.ConvertSpeedToString(DownloadSpeed), Mode=OneWay}" />
                                                    </TextBlock>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="4,0,4,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="|"
                                            TextAlignment="Right"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(CompletedSize), Mode=OneWay}"
                                            TextAlignment="Right"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip MaxWidth="9999" Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">
                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('CompletedSize')}" />
                                                        <Run Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(CompletedSize), Mode=OneWay}" />
                                                    </TextBlock>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            Grid.Column="4"
                                            Margin="4,0,4,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="|"
                                            TextAlignment="Right"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(TotalSize), Mode=OneWay}"
                                            TextAlignment="Right">

                                            <ToolTipService.ToolTip>
                                                <ToolTip MaxWidth="9999" Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">
                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('FileSize')}" />
                                                        <Run Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(TotalSize), Mode=OneWay}" />
                                                    </TextBlock>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadQueued')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Queued, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Downloading')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadPaused')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadFailed')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Failed, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadFinished')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:False), Mode=OneWay}" />

                                        <ProgressBar
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            IsIndeterminate="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Queued), Mode=OneWay}"
                                            ShowError="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Failed), Mode=OneWay}"
                                            ShowPaused="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:True), Mode=OneWay}"
                                            Value="{x:Bind converter:ValueConverterHelper.DownloadProgress(CompletedSize, TotalSize), Mode=OneWay}" />
                                    </Grid>
                                </Grid>

                                <StackPanel
                                    Grid.Column="3"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:True), Mode=OneWay}">

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        Command="{StaticResource ContinueCommand}"
                                        CommandParameter="{x:Bind}"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperating), Mode=OneWay}"
                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused, x:False), Mode=OneWay}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xE768;" />
                                        </Button.Content>

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Continue')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                        </ToolTipService.ToolTip>
                                    </Button>

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        Command="{StaticResource PauseCommand}"
                                        CommandParameter="{x:Bind}"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperating), Mode=OneWay}"
                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadingState(DownloadProgressState), Mode=OneWay}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xE769;" />
                                        </Button.Content>

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Pause')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                        </ToolTipService.ToolTip>
                                    </Button>

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        Command="{StaticResource DeleteCommand}"
                                        CommandParameter="{x:Bind}"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperating), Mode=OneWay}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xE711;" />
                                        </Button.Content>
                                    </Button>
                                </StackPanel>

                                <StackPanel
                                    Grid.Column="3"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:False), Mode=OneWay}">

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        Command="{StaticResource OpenFolderCommand}"
                                        CommandParameter="{x:Bind FilePath}"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperating), Mode=OneWay}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xEC50;" />
                                        </Button.Content>

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('OpenFolder')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                        </ToolTipService.ToolTip>
                                    </Button>

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        CornerRadius="{StaticResource ControlCornerRadius}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xE712;" />
                                        </Button.Content>

                                        <Button.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Command="{StaticResource DeleteCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Delete')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE74D;" />
                                                    </MenuFlyoutItem.Icon>

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            MaxWidth="9999"
                                                            Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DeleteToolTip')}"
                                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                                    </ToolTipService.ToolTip>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutItem
                                                    Command="{StaticResource DeleteWithFileCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DeleteWithFile')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE74D;" />
                                                    </MenuFlyoutItem.Icon>

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            MaxWidth="9999"
                                                            Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DeleteWithFileToolTip')}"
                                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                                    </ToolTipService.ToolTip>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutSeparator />

                                                <MenuFlyoutItem
                                                    Command="{StaticResource ShareFileCommand}"
                                                    CommandParameter="{x:Bind FilePath}"
                                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('ShareFile')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE72D;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutItem
                                                    Command="{StaticResource FileInformationCommand}"
                                                    CommandParameter="{x:Bind FilePath}"
                                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('FileInformation')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE946;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Button.Flyout>

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('ViewMore')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                        </ToolTipService.ToolTip>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </SplitView.Content>

        <SplitView.Pane>
            <!--  使用说明  -->
            <Grid
                Margin="0,10,0,0"
                Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                CornerRadius="4,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="16,2,6,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Glyph="&#xE946;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('UseInstruction')}" />

                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnCloseClicked}"
                        Style="{StaticResource AlternateCloseButtonStyle}">

                        <Button.Content>
                            <FontIcon
                                Margin="4"
                                FontSize="16"
                                Glyph="&#xE711;" />
                        </Button.Content>

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Close')}"
                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                        </ToolTipService.ToolTip>
                    </Button>
                </Grid>

                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Disabled"
                    HorizontalScrollMode="Disabled"
                    VerticalScrollBarVisibility="Visible"
                    VerticalScrollMode="Enabled">

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadDescription1')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="2"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadDescription2')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="3"
                            Margin="16,0,16,5"
                            Spacing="5">

                            <TextBlock HorizontalAlignment="Left">
                                <Hyperlink Click="{x:Bind OnLearnMoreClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('LearnMore')}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock HorizontalAlignment="Left">
                                <Hyperlink Click="{x:Bind OnNetworkInternetClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('NetworkAndInternet')}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock HorizontalAlignment="Left">
                                <Hyperlink Click="{x:Bind OnOpenSettingsClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('OpenSettings')}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </SplitView.Pane>
    </SplitView>
</Page>
