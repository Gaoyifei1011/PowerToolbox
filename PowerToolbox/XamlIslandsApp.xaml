<Application
    x:Class="PowerToolbox.XamlIslandsApp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:media="using:Microsoft.UI.Xaml.Media">
    <Application.Resources>
        <ResourceDictionary>
            <x:Double x:Key="TeachingTipMinWidth">0</x:Double>
            <x:Double x:Key="TeachingTipMaxWidth">9999</x:Double>
            <Thickness x:Key="TeachingTipButtonPanelMargin">0,0,0,0</Thickness>

            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources />
                <ResourceDictionary Source="ms-appx:///Styles/XamlIslands/Button.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/XamlIslands/DateTimePicker.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/XamlIslands/InfoBar.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/XamlIslands/NavigationView.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/XamlIslands/TextBlock.xaml" />
                <ResourceDictionary Source="ms-appx:///Styles/XamlIslands/TimePicker.xaml" />

                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Default">
                            <Color x:Key="DefaultBackgroundColor">#141414</Color>
                            <Color x:Key="DialogContentFillColor">#2B2B2B</Color>
                            <SolidColorBrush x:Key="DefaultBackgroundColorBrush" Color="{ThemeResource DefaultBackgroundColor}" />
                            <SolidColorBrush x:Key="DialogContentFillColorBrush" Color="{ThemeResource DialogContentFillColor}" />
                            <media:AcrylicBrush
                                x:Key="AppThemeDisplayBrush"
                                FallbackColor="#FF2C2C2C"
                                TintColor="#FF2C2C2C"
                                TintLuminosityOpacity="0.96"
                                TintOpacity="0.15" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighConstract">
                            <Color x:Key="DefaultBackgroundColor">#FF0000</Color>
                            <Color x:Key="DialogContentFillColor">#FF0000</Color>
                            <SolidColorBrush x:Key="DefaultBackgroundColorBrush" Color="{ThemeResource DefaultBackgroundColor}" />
                            <SolidColorBrush x:Key="DialogContentFillColorBrush" Color="{ThemeResource DialogContentFillColor}" />
                            <media:AcrylicBrush
                                x:Key="AppThemeDisplayBrush"
                                FallbackColor="#FFF9F9F9"
                                TintColor="#FFFCFCFC"
                                TintLuminosityOpacity="0.85"
                                TintOpacity="0" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Light">
                            <Color x:Key="DefaultBackgroundColor">#F0F3F9</Color>
                            <Color x:Key="DialogContentFillColor">#FFFFFF</Color>
                            <SolidColorBrush x:Key="DefaultBackgroundColorBrush" Color="{ThemeResource DefaultBackgroundColor}" />
                            <SolidColorBrush x:Key="DialogContentFillColorBrush" Color="{ThemeResource DialogContentFillColor}" />
                            <media:AcrylicBrush
                                x:Key="AppThemeDisplayBrush"
                                FallbackColor="#FFF9F9F9"
                                TintColor="#FFFCFCFC"
                                TintLuminosityOpacity="0.85"
                                TintOpacity="0" />
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
