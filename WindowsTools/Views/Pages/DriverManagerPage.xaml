                                                            Content="{x:Bind DependencyName}"
                                                            Visibility="{Binding ElementName=DependencyNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>

                                                <TextBlock
                                                    x:Name="DependencyInfoText"
                                                    Grid.Row="1"
                                                    MinWidth="50"
