<Page
    x:Class="WindowsTools.Views.Pages.ShellMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:string="using:WindowsTools.Strings"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="30,15,30,6"
            FontSize="22"
            Text="{x:Bind string:ShellMenu.Title}" />

        <TextBlock
            Grid.Row="1"
            Margin="32,0,32,6"
            Text="{x:Bind string:ShellMenu.TitleDescription}" />

        <ScrollViewer
            Grid.Row="2"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">

            <StackPanel Margin="30,0,30,30">

                <Grid
                    Height="48"
                    Padding="16,0,16,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,1,1,1"
                    CornerRadius="4,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE713;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind string:ShellMenu.RootMenuSettings}" />
                </Grid>

                <Grid
                    Height="52"
                    Padding="44,0,16,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,0,1,1"
                    ColumnSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="{x:Bind string:ShellMenu.RootMenuIcon}" />

                    <muxc:ImageIcon
                        Grid.Column="1"
                        Width="28"
                        Height="28"
                        VerticalAlignment="Center"
                        Source="{x:Bind RootMenuImage, Mode=OneWay}" />

                    <Button
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnModifyClicked}"
                        Content="{x:Bind string:ShellMenu.Modify}" />

                    <Button
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnReturnDefaultClicked}"
                        Content="{x:Bind string:ShellMenu.ReturnDefault}"
                        Tag="Icon" />
                </Grid>

                <Grid
                    Height="52"
                    Margin="0,0,0,3"
                    Padding="44,0,16,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,0,1,1"
                    ColumnSpacing="5"
                    CornerRadius="0,0,4,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="{x:Bind string:ShellMenu.RootMenuName}" />

                    <TextBox
                        Grid.Column="1"
                        MinWidth="150"
                        MaxWidth="450"
                        VerticalAlignment="Center"
                        Text="{x:Bind RootMenuText, Mode=OneWay}"
                        TextChanged="{x:Bind OnRootMenuTextChanged}" />

                    <Button
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnApplyClicked}"
                        Content="{x:Bind string:ShellMenu.Apply}" />

                    <Button
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnReturnDefaultClicked}"
                        Content="{x:Bind string:ShellMenu.ReturnDefault}"
                        Tag="Text" />
                </Grid>

                <Grid
                    Height="48"
                    Padding="16,0,16,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,1,1,1"
                    CornerRadius="4,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE700;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind string:ShellMenu.MenuList}" />

                    <AppBarButton
                        Grid.Column="2"
                        Click="{x:Bind OnAddMenuClicked}"
                        Label="{x:Bind string:ShellMenu.AddMenu}"
                        Style="{StaticResource AppBarButtonStyle}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE710;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Grid.Column="3"
                        Click="{x:Bind OnAddModifyClicked}"
                        Label="{x:Bind string:ShellMenu.ApplyModify}"
                        Style="{StaticResource AppBarButtonStyle}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74E;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Grid.Column="4"
                        Click="{x:Bind OnRefreshClicked}"
                        Label="{x:Bind string:ShellMenu.Refresh}"
                        Style="{StaticResource AppBarButtonStyle}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE72C;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>