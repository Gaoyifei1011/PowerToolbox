<Page
    x:Class="WindowsTools.Views.Pages.SystemTrayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:string="using:WindowsTools.Strings"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
            <MenuFlyout x:Name="SystemTrayFlyout" x:FieldModifier="public">
                <MenuFlyoutItem
                    Height="32"
                    Padding="11,0"
                    Click="{x:Bind OnShowOrHideWindowClicked}"
                    Text="{x:Bind string:SystemTray.ShowOrHideWindow}">

                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE770;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutItem
                    Height="32"
                    Padding="11,0"
                    Click="{x:Bind OnExitClicked}"
                    Text="{x:Bind string:SystemTray.Exit}">

                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE7E8;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuFlyout>
        </Grid.Resources>
    </Grid>
</Page>
