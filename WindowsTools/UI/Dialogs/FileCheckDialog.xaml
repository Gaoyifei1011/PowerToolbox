<ContentDialog
    x:Class="WindowsTools.UI.Dialogs.FileCheckDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="using:WindowsTools.Helpers.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="using:WindowsTools.Services.Controls.Settings"
    xmlns:string="using:WindowsTools.Strings"
    Title="{x:Bind string:Dialog.FileCheckExist}"
    BorderBrush="{ThemeResource ContentDialogBorderThemeBrush}"
    CloseButtonText="{x:Bind string:Dialog.CancelDownload}"
    Content="{x:Bind string:Dialog.FileCheckExistContent}"
    FlowDirection="{x:Bind helper:ContentDialogHelper.GetControlDirection(service:LanguageService.RightToLeft)}"
    PrimaryButtonClick="{x:Bind OnPrimaryButtonClicked}"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    PrimaryButtonText="{x:Bind string:Dialog.DeleteAndRedownload}"
    SecondaryButtonClick="{x:Bind OnSecondaryButtonClicked}"
    SecondaryButtonText="{x:Bind string:Dialog.OpenFolder}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d" />
