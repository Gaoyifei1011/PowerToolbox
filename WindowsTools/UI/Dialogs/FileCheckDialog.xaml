<ContentDialog
    x:Class="WindowsTools.UI.Dialogs.FileCheckDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="using:WindowsTools.Helpers.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:WindowsTools.Services.Root"
    xmlns:service="using:WindowsTools.Services.Controls.Settings"
    Title="{x:Bind root:ResourceService.DialogResource.GetString('FileCheckExist')}"
    BorderBrush="{ThemeResource ContentDialogBorderThemeBrush}"
    CloseButtonText="{x:Bind root:ResourceService.DialogResource.GetString('CancelDownload')}"
    Content="{x:Bind root:ResourceService.DialogResource.GetString('FileCheckExistContent')}"
    FlowDirection="{x:Bind helper:ContentDialogHelper.GetControlDirection(service:LanguageService.RightToLeft)}"
    PrimaryButtonClick="{x:Bind OnPrimaryButtonClicked}"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    PrimaryButtonText="{x:Bind root:ResourceService.DialogResource.GetString('DeleteAndRedownload')}"
    SecondaryButtonClick="{x:Bind OnSecondaryButtonClicked}"
    SecondaryButtonText="{x:Bind root:ResourceService.DialogResource.GetString('OpenFolder')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d" />
