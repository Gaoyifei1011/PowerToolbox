<ContentDialog
    x:Class="WindowsTools.UI.Dialogs.ClosingWindowDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:WindowsTools.Services.Root"
    xmlns:window="using:WindowsTools.Views.Windows"
    Title="{x:Bind root:ResourceService.DialogResource.GetString('ClosingWindowTitle')}"
    BorderBrush="{ThemeResource ContentDialogBorderThemeBrush}"
    Canvas.ZIndex="9999"
    CloseButtonText="{x:Bind root:ResourceService.DialogResource.GetString('Cancel')}"
    Content="{x:Bind root:ResourceService.DialogResource.GetString('ClosingWindowContent')}"
    FlowDirection="{x:Bind ((FrameworkElement)window:MainWindow.Current.Content).FlowDirection, Mode=OneWay}"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    PrimaryButtonText="{x:Bind root:ResourceService.DialogResource.GetString('OK')}"
    RequestedTheme="{x:Bind ((FrameworkElement)window:MainWindow.Current.Content).RequestedTheme, Mode=OneWay}"
    SecondaryButtonText="{x:Bind root:ResourceService.DialogResource.GetString('OpenDownloadPage')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d" />
