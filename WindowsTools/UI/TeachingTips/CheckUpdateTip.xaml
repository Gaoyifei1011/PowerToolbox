<muxc:TeachingTip
    x:Class="WindowsTools.UI.TeachingTips.CheckUpdateTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:string="using:WindowsTools.Strings"
    IsLightDismissEnabled="False"
    PlacementMargin="0,20,0,0"
    PreferredPlacement="Bottom"
    Style="{StaticResource TeachingTipStyle}"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            x:Name="NewestVersion"
            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
            Text="{x:Bind string:Notification.NewestVersion}" />

        <TextBlock
            x:Name="NotNewestVersion"
            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
            Text="{x:Bind string:Notification.NotNewestVersion}" />
    </Grid>
</muxc:TeachingTip>
