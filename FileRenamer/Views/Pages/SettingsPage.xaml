<Page
    x:Class="FileRenamer.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlHelper="using:FileRenamer.Helpers.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:FileRenamer.Services.Root"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <StackPanel
            Margin="30,0"
            Padding="0,10,0,30"
            Spacing="3">

            <TextBlock
                Margin="0,0,0,5"
                FontSize="16"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Appearance')}" />

            <!--  应用主题设置用户控件  -->
            <Grid
                Height="61"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE790;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/ThemeMode')}" />

                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/ThemeModeDescription')}" />
                </StackPanel>

                <HyperlinkButton
                    Grid.Column="2"
                    Margin="0,0,6,0"
                    Click="{x:Bind OnSettingsColorClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsColorSettings')}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsColorSettings')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>

                <DropDownButton
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="{x:Bind Theme.DisplayName, Mode=OneWay}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind Theme.DisplayName, Mode=OneWay}" Placement="Mouse" />
                    </ToolTipService.ToolTip>

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <ToggleMenuFlyoutItem
                                Click="{x:Bind OnThemeSelectClicked}"
                                IsChecked="{x:Bind IsItemChecked(Theme.InternalName, ThemeList[0].InternalName), Mode=OneWay}"
                                Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                Tag="0"
                                Text="{x:Bind ThemeList[0].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ThemeList[0].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </ToggleMenuFlyoutItem>

                            <ToggleMenuFlyoutItem
                                Click="{x:Bind OnThemeSelectClicked}"
                                IsChecked="{x:Bind IsItemChecked(Theme.InternalName, ThemeList[1].InternalName), Mode=OneWay}"
                                Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                Tag="1"
                                Text="{x:Bind ThemeList[1].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ThemeList[1].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </ToggleMenuFlyoutItem>

                            <ToggleMenuFlyoutItem
                                Click="{x:Bind OnThemeSelectClicked}"
                                IsChecked="{x:Bind IsItemChecked(Theme.InternalName, ThemeList[2].InternalName), Mode=OneWay}"
                                Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                Tag="2"
                                Text="{x:Bind ThemeList[2].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ThemeList[2].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </ToggleMenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  窗口背景材质设置用户控件  -->
            <Grid
                x:Name="BackdropSettings"
                Height="61"
                Padding="16,12"
                x:Load="{x:Bind CanUseBackdrop}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE771;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Backdrop')}" />

                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/BackdropDescription')}" />
                </StackPanel>

                <HyperlinkButton
                    Grid.Column="2"
                    Margin="0,0,6,0"
                    Click="{x:Bind OnSettingsBackdropClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsBackdropSettings')}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsBackdropSettings')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>

                <DropDownButton
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="{x:Bind Backdrop.DisplayName, Mode=OneWay}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind Backdrop.DisplayName, Mode=OneWay}" Placement="Mouse" />
                    </ToolTipService.ToolTip>

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <ToggleMenuFlyoutItem
                                Click="{x:Bind OnBackdropSelectClicked}"
                                IsChecked="{x:Bind IsItemChecked(Backdrop.InternalName, BackdropList[0].InternalName), Mode=OneWay}"
                                Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                Tag="0"
                                Text="{x:Bind BackdropList[0].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind BackdropList[0].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </ToggleMenuFlyoutItem>

                            <ToggleMenuFlyoutItem
                                Click="{x:Bind OnBackdropSelectClicked}"
                                IsChecked="{x:Bind IsItemChecked(Backdrop.InternalName, BackdropList[1].InternalName), Mode=OneWay}"
                                Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                Tag="1"
                                Text="{x:Bind BackdropList[1].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind BackdropList[1].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </ToggleMenuFlyoutItem>

                            <ToggleMenuFlyoutItem
                                Click="{x:Bind OnBackdropSelectClicked}"
                                IsChecked="{x:Bind IsItemChecked(Backdrop.InternalName, BackdropList[2].InternalName), Mode=OneWay}"
                                Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                Tag="2"
                                Text="{x:Bind BackdropList[2].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind BackdropList[2].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </ToggleMenuFlyoutItem>

                            <ToggleMenuFlyoutItem
                                Click="{x:Bind OnBackdropSelectClicked}"
                                IsChecked="{x:Bind IsItemChecked(Backdrop.InternalName, BackdropList[3].InternalName), Mode=OneWay}"
                                Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                Tag="3"
                                Text="{x:Bind BackdropList[3].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind BackdropList[3].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </ToggleMenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  界面语言设置用户控件  -->
            <Grid
                Height="61"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xF2B7;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Language')}" />

                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageDescription')}" />
                </StackPanel>

                <MenuFlyoutItem
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    controlHelper:CursorHelper.Cursor="Hand"
                    Click="{x:Bind OnLanguageTipClicked}"
                    Style="{StaticResource ButtonNormalMenuItemStyle}">

                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE946;" />
                    </MenuFlyoutItem.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageToolTip')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </MenuFlyoutItem>

                <DropDownButton
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="{x:Bind AppLanguage.DisplayName, Mode=OneWay}">

                    <DropDownButton.Flyout>
                        <MenuFlyout x:Name="LanguageFlyout" Placement="Bottom" />
                    </DropDownButton.Flyout>

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind AppLanguage.DisplayName, Mode=OneWay}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </DropDownButton>
            </Grid>

            <Grid
                Height="61"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    FontSize="16"
                    Glyph="&#xE840;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/TopMost')}" />

                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostDescription')}" />
                </StackPanel>

                <ToggleSwitch
                    Grid.Column="2"
                    MinWidth="0"
                    Margin="0,-2,0,0"
                    controlHelper:CursorHelper.Cursor="Hand"
                    FlowDirection="RightToLeft"
                    IsOn="{x:Bind TopMostValue, Mode=OneWay}"
                    OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostOffContent')}"
                    OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostOnContent')}"
                    Toggled="{x:Bind OnTopMostToggled}" />
            </Grid>

            <TextBlock
                Margin="0,0,0,5"
                FontSize="16"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/General')}" />

            <Grid
                Height="61"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    FontSize="16"
                    Glyph="&#xE838;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/OpenFolder')}" />

                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/OpenFolderDescription')}" />
                </StackPanel>

                <ToggleSwitch
                    Grid.Column="2"
                    MinWidth="0"
                    Margin="0,-2,0,0"
                    controlHelper:CursorHelper.Cursor="Hand"
                    FlowDirection="RightToLeft"
                    IsOn="{x:Bind OpenFolderValue, Mode=OneWay}"
                    OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/OpenFolderOffContent')}"
                    OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/OpenFolderOnContent')}"
                    Toggled="{x:Bind OnOpenFolderToggled}" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
