<Page
    x:Class="FileRenamer.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlExtensions="using:FileRenamer.Helpers.Controls.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogsAndFlyouts="using:FileRenamer.Views.CustomControls.DialogsAndFlyouts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pageViewModel="using:FileRenamer.ViewModels.Pages"
    xmlns:root="using:FileRenamer.Services.Root"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Page.DataContext>
        <pageViewModel:SettingsViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Disabled"
        Style="{StaticResource ScrollViewerStyle}"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <StackPanel
            Margin="30,0"
            Padding="0,10,0,30"
            Spacing="3">

            <TextBlock
                Margin="0,0,0,5"
                FontSize="16"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Appearance')}" />

            <!--  应用主题设置用户控件  -->
            <Grid Style="{StaticResource CardGridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE790;" />

                <StackPanel Grid.Column="1" Orientation="Vertical">

                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/ThemeMode')}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/ThemeModeDescription')}" />
                </StackPanel>

                <HyperlinkButton
                    Grid.Column="2"
                    Margin="0,0,6,0"
                    Click="{x:Bind ViewModel.OnSettingsColorClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsColorSettings')}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsColorSettings')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>

                <DropDownButton
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="{x:Bind ViewModel.Theme.DisplayName, Mode=OneWay}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind ViewModel.Theme.DisplayName, Mode=OneWay}" Placement="Mouse" />
                    </ToolTipService.ToolTip>

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <dialogsAndFlyouts:RadioMenuFlyoutItem
                                Click="{x:Bind ViewModel.OnThemeSelectClicked}"
                                GroupName="ThemeSetting"
                                IsChecked="{x:Bind IsItemChecked(ViewModel.Theme.InternalName, ViewModel.ThemeList[0].InternalName), Mode=OneWay}"
                                Tag="0"
                                Text="{x:Bind ViewModel.ThemeList[0].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ViewModel.ThemeList[0].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </dialogsAndFlyouts:RadioMenuFlyoutItem>

                            <dialogsAndFlyouts:RadioMenuFlyoutItem
                                Click="{x:Bind ViewModel.OnThemeSelectClicked}"
                                GroupName="ThemeSetting"
                                IsChecked="{x:Bind IsItemChecked(ViewModel.Theme.InternalName, ViewModel.ThemeList[1].InternalName), Mode=OneWay}"
                                Tag="1"
                                Text="{x:Bind ViewModel.ThemeList[1].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ViewModel.ThemeList[1].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </dialogsAndFlyouts:RadioMenuFlyoutItem>

                            <dialogsAndFlyouts:RadioMenuFlyoutItem
                                Click="{x:Bind ViewModel.OnThemeSelectClicked}"
                                GroupName="ThemeSetting"
                                IsChecked="{x:Bind IsItemChecked(ViewModel.Theme.InternalName, ViewModel.ThemeList[2].InternalName), Mode=OneWay}"
                                Tag="2"
                                Text="{x:Bind ViewModel.ThemeList[2].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ViewModel.ThemeList[2].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </dialogsAndFlyouts:RadioMenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  窗口背景材质设置用户控件  -->
            <Grid
                x:Name="BackdropSettings"
                x:Load="{x:Bind ViewModel.CanUseBackdrop}"
                Style="{StaticResource CardGridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE771;" />

                <StackPanel Grid.Column="1" Orientation="Vertical">

                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/Backdrop')}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/BackdropDescription')}" />
                </StackPanel>

                <DropDownButton
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Content="{x:Bind ViewModel.Backdrop.DisplayName, Mode=OneWay}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind ViewModel.Backdrop.DisplayName, Mode=OneWay}" Placement="Mouse" />
                    </ToolTipService.ToolTip>

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <dialogsAndFlyouts:RadioMenuFlyoutItem
                                Click="{x:Bind ViewModel.OnBackdropSelectClicked}"
                                GroupName="BackdropSetting"
                                IsChecked="{x:Bind IsItemChecked(ViewModel.Backdrop.InternalName, ViewModel.BackdropList[0].InternalName), Mode=OneWay}"
                                Tag="0"
                                Text="{x:Bind ViewModel.BackdropList[0].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ViewModel.BackdropList[0].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </dialogsAndFlyouts:RadioMenuFlyoutItem>

                            <dialogsAndFlyouts:RadioMenuFlyoutItem
                                Click="{x:Bind ViewModel.OnBackdropSelectClicked}"
                                GroupName="BackdropSetting"
                                IsChecked="{x:Bind IsItemChecked(ViewModel.Backdrop.InternalName, ViewModel.BackdropList[1].InternalName), Mode=OneWay}"
                                Tag="1"
                                Text="{x:Bind ViewModel.BackdropList[1].DisplayName}">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ViewModel.BackdropList[1].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </dialogsAndFlyouts:RadioMenuFlyoutItem>

                            <dialogsAndFlyouts:RadioMenuFlyoutItem
                                Click="{x:Bind ViewModel.OnBackdropSelectClicked}"
                                GroupName="BackdropSetting"
                                IsChecked="{x:Bind IsItemChecked(ViewModel.Backdrop.InternalName, ViewModel.BackdropList[2].InternalName), Mode=OneWay}"
                                Tag="2"
                                Text="{x:Bind ViewModel.BackdropList[2].DisplayName}">
                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ViewModel.BackdropList[2].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </dialogsAndFlyouts:RadioMenuFlyoutItem>

                            <dialogsAndFlyouts:RadioMenuFlyoutItem
                                Click="{x:Bind ViewModel.OnBackdropSelectClicked}"
                                GroupName="BackdropSetting"
                                IsChecked="{x:Bind IsItemChecked(ViewModel.Backdrop.InternalName, ViewModel.BackdropList[3].InternalName), Mode=OneWay}"
                                Tag="3"
                                Text="{x:Bind ViewModel.BackdropList[3].DisplayName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind ViewModel.BackdropList[3].DisplayName}" Placement="Mouse" />
                                </ToolTipService.ToolTip>
                            </dialogsAndFlyouts:RadioMenuFlyoutItem>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  界面语言设置用户控件  -->
            <Grid Style="{StaticResource CardGridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xF2B7;" />

                <StackPanel Grid.Column="1" Orientation="Vertical">

                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/Language')}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageDescription')}" />
                </StackPanel>

                <Button
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind ViewModel.OnLanguageTipClicked}"
                    Style="{StaticResource ButtonInfoStyle}">

                    <Button.Content>
                        <FontIcon FontSize="16" Glyph="&#xE946;" />
                    </Button.Content>

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageToolTip')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </Button>

                <ComboBox
                    Grid.Column="3"
                    Width="Auto"
                    VerticalAlignment="Center"
                    DisplayMemberPath="DisplayName"
                    DropDownOpened="{x:Bind ViewModel.OnDropDownOpened}"
                    ItemsSource="{x:Bind ViewModel.LanguageList}"
                    SelectedItem="{x:Bind ViewModel.Language, Mode=OneWay}"
                    SelectionChanged="{x:Bind ViewModel.OnSelectionChanged}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind ViewModel.Language.DisplayName, Mode=OneWay}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </ComboBox>
            </Grid>

            <TextBlock
                Margin="0,0,0,5"
                FontSize="16"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/General')}" />

            <!--  应用通知设置用户控件  -->
            <Grid Style="{StaticResource CardGridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xEA8f;" />

                <StackPanel Grid.Column="1" Orientation="Vertical">

                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/Notification')}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationDescription')}" />
                </StackPanel>

                <HyperlinkButton
                    Grid.Column="2"
                    Margin="0,0,6,0"
                    VerticalAlignment="Center"
                    Click="{x:Bind ViewModel.OnSettingsNotificationClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsNotificationSettings')}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsNotificationSettings')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>

                <ToggleSwitch
                    Grid.Column="3"
                    MinWidth="0"
                    controlExtensions:CursorHelper.Cursor="Hand"
                    FlowDirection="RightToLeft"
                    IsOn="{x:Bind ViewModel.Notification, Mode=OneWay}"
                    OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationOffContent')}"
                    OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationOnContent')}"
                    Toggled="{x:Bind ViewModel.OnNotificationToggled}" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
