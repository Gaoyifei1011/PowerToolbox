<Page
    x:Class="FileRenamer.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:collections="using:FileRenamer.Views.CustomControls.Collections"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:layout="using:FileRenamer.Views.CustomControls.Layout"
    xmlns:local="using:FileRenamer.Converters.Formats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:FileRenamer.Models.Controls.About"
    xmlns:pageViewModel="using:FileRenamer.ViewModels.Pages"
    xmlns:root="using:FileRenamer.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <local:AboutToolTipFormatConverter x:Name="AboutToolTipFormatConverter" />
    </Page.Resources>

    <Page.DataContext>
        <pageViewModel:AboutViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <SplitView
        DisplayMode="Inline"
        IsPaneOpen="True"
        OpenPaneLength="220"
        PaneBackground="Transparent">

        <SplitView.Pane>
            <Grid BorderBrush="{ThemeResource NavigationViewItemSeparatorForeground}" BorderThickness="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    FontSize="26"
                    Text="{x:Bind root:ResourceService.GetLocalized('About/Title')}" />

                <MenuFlyoutSeparator Grid.Row="1" />

                <ListView
                    Grid.Row="2"
                    Margin="0,6,0,0"
                    VerticalAlignment="Stretch"
                    IsItemClickEnabled="True"
                    SelectionMode="Single">

                    <ListViewItem Content="{x:Bind root:ResourceService.GetLocalized('About/BriefIntroduction')}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/BriefIntroduction')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>
                    <ListViewItem Content="{x:Bind root:ResourceService.GetLocalized('About/Reference')}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/Reference')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>
                    <ListViewItem Content="{x:Bind root:ResourceService.GetLocalized('About/UseInstruction')}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/UseInstruction')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>
                    <ListViewItem Content="{x:Bind root:ResourceService.GetLocalized('About/Precaution')}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/Precaution')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>
                    <ListViewItem Content="{x:Bind root:ResourceService.GetLocalized('About/SettingsHelp')}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/SettingsHelp')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>
                    <ListViewItem Content="{x:Bind root:ResourceService.GetLocalized('About/Thanks')}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/Thanks')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>
                </ListView>

                <MenuFlyoutSeparator Grid.Row="3" Margin="0,10,0,0" />

                <Button
                    Grid.Row="4"
                    Margin="4"
                    HorizontalAlignment="Stretch"
                    Content="{x:Bind root:ResourceService.GetLocalized('About/QuickOperation')}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('About/QuickOPeration')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>

                    <Button.Flyout>
                        <MenuFlyout Placement="Right">
                            <MenuFlyoutItem Command="{x:Bind ViewModel.CreateDesktopShortcutCommand}" Text="{x:Bind root:ResourceService.GetLocalized('About/CreateDesktopShortcut')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/CreateDesktopShortcutToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Command="{x:Bind ViewModel.PinToStartScreenCommand}" Text="{x:Bind root:ResourceService.GetLocalized('About/PinToStartScreen')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/PinToStartScreenToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                Command="{x:Bind ViewModel.PinToTaskbarCommand}"
                                Text="{x:Bind root:ResourceService.GetLocalized('About/PinToTaskbar')}"
                                Visibility="Collapsed">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/PinToTaskbarToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>

                <Button
                    Grid.Row="5"
                    Margin="4,0,4,4"
                    HorizontalAlignment="Stretch"
                    Content="{x:Bind root:ResourceService.GetLocalized('About/UpdateAndLicensing')}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('About/UpdateAndLicensing')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>

                    <Button.Flyout>
                        <MenuFlyout Placement="Right">
                            <MenuFlyoutItem Command="{x:Bind ViewModel.ShowReleaseNotesCommand}" Text="{x:Bind root:ResourceService.GetLocalized('About/ShowReleaseNotes')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/ShowReleaseNotesToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Command="{x:Bind ViewModel.ShowLicenseCommand}" Text="{x:Bind root:ResourceService.GetLocalized('About/ShowLicense')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/ShowLicenseToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </SplitView.Pane>

        <ScrollViewer
            x:Name="AboutScroll"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <StackPanel
                Margin="30,0"
                Padding="0,10,0,30"
                Spacing="3">

                <layout:Expander Style="{StaticResource ExpanderAboutStyle}">
                    <layout:Expander.Header>
                        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/BriefIntroduction')}" />
                    </layout:Expander.Header>
                </layout:Expander>

                <layout:Expander Style="{StaticResource ExpanderAboutStyle}">
                    <layout:Expander.Header>
                        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/ReferenceTitle')}" />
                    </layout:Expander.Header>

                    <layout:Expander.Content>
                        <collections:AdaptiveGridView
                            Margin="9,0"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            DesiredWidth="280"
                            ItemContainerStyle="{StaticResource GridViewItemStyle}"
                            ItemsSource="{x:Bind ViewModel.ReferenceDict}"
                            OneRowModeEnabled="False"
                            SelectionMode="None"
                            StretchContentForSingleRow="True">
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="model:ReferenceKeyValuePairModel">
                                    <HyperlinkButton
                                        MinWidth="280"
                                        Padding="5,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Content="{x:Bind Key}"
                                        NavigateUri="{x:Bind Value}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind Key, Converter={StaticResource AboutToolTipFormatConverter}, ConverterParameter=Reference}"
                                                Placement="Bottom"
                                                VerticalOffset="25" />
                                        </ToolTipService.ToolTip>
                                    </HyperlinkButton>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </collections:AdaptiveGridView>
                    </layout:Expander.Content>
                </layout:Expander>

                <layout:Expander Style="{StaticResource ExpanderAboutStyle}">
                    <layout:Expander.Header>
                        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/UseInstruction')}" />
                    </layout:Expander.Header>
                </layout:Expander>

                <layout:Expander Style="{StaticResource ExpanderAboutStyle}">
                    <layout:Expander.Header>
                        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/Precaution')}" />
                    </layout:Expander.Header>
                </layout:Expander>

                <layout:Expander Style="{StaticResource ExpanderAboutStyle}">
                    <layout:Expander.Header>
                        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/SettingsHelp')}" />
                    </layout:Expander.Header>
                </layout:Expander>

                <layout:Expander Style="{StaticResource ExpanderAboutStyle}">
                    <layout:Expander.Header>
                        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/ThanksTitle')}" />
                    </layout:Expander.Header>

                    <layout:Expander.Content>
                        <collections:AdaptiveGridView
                            Margin="9,0"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            DesiredWidth="280"
                            ItemContainerStyle="{StaticResource GridViewItemStyle}"
                            ItemsSource="{x:Bind ViewModel.ThanksDict}"
                            OneRowModeEnabled="False"
                            SelectionMode="None"
                            StretchContentForSingleRow="True">
                            <collections:AdaptiveGridView.ItemTemplate>
                                <DataTemplate x:DataType="model:ThanksKeyValuePairModel">
                                    <HyperlinkButton
                                        Padding="5,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Content="{x:Bind Key}"
                                        NavigateUri="{x:Bind Value}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind Key, Converter={StaticResource AboutToolTipFormatConverter}, ConverterParameter=Thanks}"
                                                Placement="Bottom"
                                                VerticalOffset="25" />
                                        </ToolTipService.ToolTip>
                                    </HyperlinkButton>
                                </DataTemplate>
                            </collections:AdaptiveGridView.ItemTemplate>
                        </collections:AdaptiveGridView>
                    </layout:Expander.Content>
                </layout:Expander>
            </StackPanel>
        </ScrollViewer>
    </SplitView>
</Page>
