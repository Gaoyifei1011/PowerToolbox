<Page
    x:Class="FileRenamer.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:FileRenamer.Services.Root"
    xmlns:ac="using:FileRenamer.UI.Controls.About"
    xmlns:pageViewModel="using:FileRenamer.ViewModels.Pages"
    Loaded="{x:Bind OnLoaded}"
    NavigationCacheMode="Enabled"
    Unloaded="{x:Bind OnUnloaded}"
    mc:Ignorable="d">

    <Page.DataContext>
        <pageViewModel:AboutViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <SplitView
        DisplayMode="Inline"
        IsPaneOpen="True"
        OpenPaneLength="220"
        PaneBackground="Transparent">

        <SplitView.Pane>
            <Grid BorderBrush="{ThemeResource NavigationViewItemSeparatorForeground}" BorderThickness="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    FontSize="26"
                    Text="{x:Bind root:ResourceService.GetLocalized('About/Title')}" />

                <MenuFlyoutSeparator Grid.Row="1" />

                <ListView
                    Grid.Row="2"
                    Margin="0,6,0,0"
                    VerticalAlignment="Stretch"
                    SelectedIndex="{x:Bind ViewModel.SelectedIndex, Mode=OneWay}"
                    SelectionMode="Single">

                    <ListViewItem
                        Content="{x:Bind root:ResourceService.GetLocalized('About/BriefIntroduction')}"
                        Tag="{x:Bind ViewModel.TagList[0]}"
                        Tapped="{x:Bind OnItemTapped}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/BriefIntroduction')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>

                    <ListViewItem
                        Content="{x:Bind root:ResourceService.GetLocalized('About/Reference')}"
                        Tag="{x:Bind ViewModel.TagList[1]}"
                        Tapped="{x:Bind OnItemTapped}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/Reference')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>

                    <ListViewItem
                        Content="{x:Bind root:ResourceService.GetLocalized('About/UseInstruction')}"
                        Tag="{x:Bind ViewModel.TagList[2]}"
                        Tapped="{x:Bind OnItemTapped}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/UseInstruction')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>

                    <ListViewItem
                        Content="{x:Bind root:ResourceService.GetLocalized('About/Precaution')}"
                        Tag="{x:Bind ViewModel.TagList[3]}"
                        Tapped="{x:Bind OnItemTapped}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/Precaution')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>

                    <ListViewItem
                        Content="{x:Bind root:ResourceService.GetLocalized('About/SettingsHelp')}"
                        Tag="{x:Bind ViewModel.TagList[4]}"
                        Tapped="{x:Bind OnItemTapped}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/SettingsHelp')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>

                    <ListViewItem
                        Content="{x:Bind root:ResourceService.GetLocalized('About/Thanks')}"
                        Tag="{x:Bind ViewModel.TagList[5]}"
                        Tapped="{x:Bind OnItemTapped}">
                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('About/Thanks')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </ListViewItem>
                </ListView>

                <MenuFlyoutSeparator Grid.Row="3" Margin="0,10,0,0" />

                <Button
                    Grid.Row="4"
                    Margin="4"
                    HorizontalAlignment="Stretch"
                    Content="{x:Bind root:ResourceService.GetLocalized('About/QuickOperation')}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('About/QuickOPeration')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>

                    <Button.Flyout>
                        <MenuFlyout Placement="Right">
                            <MenuFlyoutItem Command="{x:Bind ViewModel.CreateDesktopShortcutCommand}" Text="{x:Bind root:ResourceService.GetLocalized('About/CreateDesktopShortcut')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/CreateDesktopShortcutToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Command="{x:Bind ViewModel.PinToStartScreenCommand}" Text="{x:Bind root:ResourceService.GetLocalized('About/PinToStartScreen')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/PinToStartScreenToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem
                                Command="{x:Bind ViewModel.PinToTaskbarCommand}"
                                Text="{x:Bind root:ResourceService.GetLocalized('About/PinToTaskbar')}"
                                Visibility="Collapsed">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/PinToTaskbarToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>

                <Button
                    Grid.Row="5"
                    Margin="4,0,4,4"
                    HorizontalAlignment="Stretch"
                    Content="{x:Bind root:ResourceService.GetLocalized('About/UpdateAndLicensing')}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('About/UpdateAndLicensing')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>

                    <Button.Flyout>
                        <MenuFlyout Placement="Right">
                            <MenuFlyoutItem Command="{x:Bind ViewModel.ShowReleaseNotesCommand}" Text="{x:Bind root:ResourceService.GetLocalized('About/ShowReleaseNotes')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/ShowReleaseNotesToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Command="{x:Bind ViewModel.ShowLicenseCommand}" Text="{x:Bind root:ResourceService.GetLocalized('About/ShowLicense')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('About/ShowLicenseToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </SplitView.Pane>

        <ScrollViewer
            x:Name="AboutScroll"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <StackPanel
                Margin="30,0"
                Padding="0,10,0,30"
                Spacing="3">

                <ac:IntroductionControl x:Name="Introduction" />

                <ac:ReferenceControl x:Name="Reference" />

                <ac:InstructionsControl x:Name="Instructions" />

                <ac:PrecautionControl x:Name="Precaution" />

                <ac:SettingsHelpControl x:Name="SettingsHelp" />

                <ac:ThanksControl x:Name="Thanks" />
            </StackPanel>
        </ScrollViewer>
    </SplitView>
</Page>
