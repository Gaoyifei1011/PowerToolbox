<notification:InAppNotification
    x:Class="FileRenamer.UI.Notifications.OperationResultNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fileRenamer="using:FileRenamer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notification="using:FileRenamer.Views.CustomControls.Notifications"
    RequestedTheme="{x:Bind fileRenamer:Program.MainWindow.MainPage.WindowTheme, Mode=OneWay}"
    mc:Ignorable="d">

    <TextBlock Text="{x:Bind OperationResult}" />
</notification:InAppNotification>
