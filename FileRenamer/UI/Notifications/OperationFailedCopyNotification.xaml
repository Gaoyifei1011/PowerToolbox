<notification:InAppNotification
    x:Class="FileRenamer.UI.Notifications.OperationFailedCopyNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:FileRenamer.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notification="using:FileRenamer.Views.CustomControls.Notifications"
    xmlns:root="using:FileRenamer.Services.Root"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            x:Name="CopySuccess"
            x:Load="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsMultiSelected), Mode=OneWay}"
            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/OperationFailedCopy')}" />
        <TextBlock
            x:Name="CopySelectedSuccess"
            x:Load="{x:Bind IsMultiSelected, Mode=OneWay}"
            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
            Loaded="{x:Bind CopySelectedSuccessLoaded}" />
    </Grid>
</notification:InAppNotification>
