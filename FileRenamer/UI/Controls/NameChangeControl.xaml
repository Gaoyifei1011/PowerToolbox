<Grid
    x:Class="FileRenamer.UI.Controls.NameChangeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlsViewModel="using:FileRenamer.ViewModels.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:FileRenamer.Services.Root"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="{x:Bind ViewModel.WindowTheme, Mode=OneWay}"
    mc:Ignorable="d">

    <Grid.DataContext>
        <controlsViewModel:NameChangeViewModel x:Name="ViewModel" x:FieldModifier="public" />
    </Grid.DataContext>

    <TextBlock Style="{StaticResource ContentDialogContentStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Dialog/DPIChangedNotifyContent')}" />
</Grid>
