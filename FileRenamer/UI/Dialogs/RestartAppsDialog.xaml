<dialogsAndFlyouts:ExtendedContentDialog
    x:Class="FileRenamer.UI.Dialogs.RestartAppsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogViewModel="using:FileRenamer.ViewModels.Dialogs"
    xmlns:dialogsAndFlyouts="using:FileRenamer.Views.CustomControls.DialogsAndFlyouts"
    xmlns:fileRenamer="using:FileRenamer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:FileRenamer.Services.Root"
    Title="{x:Bind root:ResourceService.GetLocalized('Dialog/Restart')}"
    CloseButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/Cancel')}"
    PrimaryButtonClick="{x:Bind ViewModel.OnRestartAppsClicked}"
    PrimaryButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/OK')}"
    RequestedTheme="{x:Bind fileRenamer:Program.MainWindow.MainPage.ViewModel.WindowTheme, Mode=OneWay}"
    Style="{StaticResource ContentDialogStyle}"
    mc:Ignorable="d">

    <dialogsAndFlyouts:ExtendedContentDialog.DataContext>
        <dialogViewModel:RestartAppsViewModel x:Name="ViewModel" />
    </dialogsAndFlyouts:ExtendedContentDialog.DataContext>

    <TextBlock Style="{StaticResource ContentDialogContentStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Dialog/RestartContent')}" />
</dialogsAndFlyouts:ExtendedContentDialog>
