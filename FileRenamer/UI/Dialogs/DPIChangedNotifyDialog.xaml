<dialogsAndFlyouts:ExtendedContentDialog
    x:Class="FileRenamer.UI.Dialogs.DPIChangedNotifyDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogsAndFlyouts="using:FileRenamer.Views.CustomControls.DialogsAndFlyouts"
    xmlns:fileRenamer="using:FileRenamer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:FileRenamer.Services.Root"
    Title="{x:Bind root:ResourceService.GetLocalized('Dialog/DPIChangedNotifyTitle')}"
    CloseButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/CloseDialog')}"
    PrimaryButtonClick="{x:Bind OnRestartClicked}"
    PrimaryButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/Restart')}"
    RequestedTheme="{x:Bind fileRenamer:Program.MainWindow.MainPage.WindowTheme, Mode=OneWay}"
    Style="{StaticResource ContentDialogStyle}"
    mc:Ignorable="d">

    <TextBlock Style="{StaticResource ContentDialogContentStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Dialog/DPIChangedNotifyContent')}" />
</dialogsAndFlyouts:ExtendedContentDialog>
