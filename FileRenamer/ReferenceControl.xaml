<UserControl
    x:Class="FileRenamer.ReferenceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FileRenamer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <local:AboutToolTipFormatConverter x:Name="AboutToolTipFormatConverter" />
    </UserControl.Resources>

    <local:Expander Style="{StaticResource ExpanderAboutStyle}">
        <local:Expander.Header>
            <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind ReferenceTitle}" />
        </local:Expander.Header>

        <local:Expander.Content>
            <GridView
                Margin="9,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                ItemContainerStyle="{StaticResource GridViewItemStyle}"
                ItemsSource="{x:Bind ViewModel.ReferenceDict}"
                SelectionMode="None">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:ReferenceKeyValuePairModel">
                        <HyperlinkButton
                            MinWidth="280"
                            Padding="5,8"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Content="{x:Bind Key}"
                            NavigateUri="{x:Bind Value}">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    Content="{x:Bind Key, Converter={StaticResource AboutToolTipFormatConverter}, ConverterParameter=Reference}"
                                    Placement="Bottom"
                                    VerticalOffset="25" />
                            </ToolTipService.ToolTip>
                        </HyperlinkButton>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </local:Expander.Content>
    </local:Expander>
</UserControl>
