<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="SegoeFluentFontFamily">ms-appx:///Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons</FontFamily>
    <FontFamily x:Key="SettingsFluentFontFamily">ms-appx:///Fonts/Settings Fluent Icons.ttf#Settings Fluent Icons</FontFamily>

    <Style x:Key="SegoeFluentStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="{StaticResource SegoeFluentFontFamily}" />
    </Style>

    <Style x:Key="SettingsFluentStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="{StaticResource SettingsFluentFontFamily}" />
    </Style>

    <Style x:Key="FontIconStyle" TargetType="FontIcon">

        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="0,0,12,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>
