<Page
    x:Class="PowerTools.Views.Pages.DownloadManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:PowerTools.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:PowerTools.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:PowerTools.Models"
    xmlns:roothelper="using:PowerTools.Helpers.Root"
    xmlns:rootservice="using:PowerTools.Services.Root"
    xmlns:system="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
        <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>

        <XamlUICommand x:Name="ContinueCommand" ExecuteRequested="{x:Bind OnContinueExecuteRequested}" />
        <XamlUICommand x:Name="PauseCommand" ExecuteRequested="{x:Bind OnPauseExecuteRequested}" />
        <XamlUICommand x:Name="OpenFolderCommand" ExecuteRequested="{x:Bind OnOpenFolderExecuteRequested}" />
        <XamlUICommand x:Name="DeleteCommand" ExecuteRequested="{x:Bind OnDeleteExecuteRequested}" />
        <XamlUICommand x:Name="DeleteWithFileCommand" ExecuteRequested="{x:Bind OnDeleteWithFileExecuteRequested}" />
        <XamlUICommand x:Name="ShareFileCommand" ExecuteRequested="{x:Bind OnShareFileExecuteRequested}" />
        <XamlUICommand x:Name="FileInformationCommand" ExecuteRequested="{x:Bind OnFileInformationExecuteRequested}" />

        <!--  添加下载任务浮出控件  -->
        <Flyout
            x:Name="AddDownloadTaskFlyout"
            Closing="{x:Bind OnClosing}"
            Opening="{x:Bind OnOpening}">
            <Flyout.FlyoutPresenterStyle>
                <Style BasedOn="{StaticResource DefaultFlyoutPresenterStyle}" TargetType="FlyoutPresenter">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="MaxWidth" Value="9999" />
                    <Setter Property="MaxHeight" Value="9999" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Name" Value="DialogFlyout" />
                </Style>
            </Flyout.FlyoutPresenterStyle>

            <Grid KeyDown="{x:Bind OnFlyoutKeyDown}">
                <Rectangle Fill="{ThemeResource ContentDialogSmokeFill}" />

                <Border
                    MinWidth="{ThemeResource ContentDialogMinWidth}"
                    MinHeight="{ThemeResource ContentDialogMinHeight}"
                    MaxWidth="{ThemeResource ContentDialogMaxWidth}"
                    MaxHeight="{ThemeResource ContentDialogMaxHeight}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="{ThemeResource ContentDialogBorderThemeBrush}"
                    BorderThickness="{ThemeResource ContentDialogBorderWidth}"
                    CornerRadius="{ThemeResource OverlayCornerRadius}"
                    RenderTransformOrigin="0.5,0.5">

                    <Grid Width="{ThemeResource ContentDialogMaxWidth}" CornerRadius="{ThemeResource OverlayCornerRadius}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">

                            <Grid
                                Padding="{ThemeResource ContentDialogPadding}"
                                Background="{ThemeResource DialogContentFillColorBrush}"
                                BorderBrush="{ThemeResource ContentDialogSeparatorBorderBrush}"
                                BorderThickness="{ThemeResource ContentDialogSeparatorThickness}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Margin="{ThemeResource ContentDialogTitleMargin}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    FontFamily="{StaticResource ContentControlThemeFontFamily}"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource ContentDialogForeground}"
                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('AddTask')}" />

                                <StackPanel Grid.Row="1" Spacing="5">
                                    <TextBox
                                        Height="120"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Stretch"
                                        FontFamily="{StaticResource ContentControlThemeFontFamily}"
                                        FontSize="{StaticResource ControlContentThemeFontSize}"
                                        Foreground="{ThemeResource ContentDialogForeground}"
                                        PlaceholderText="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadLinkPHText')}"
                                        Text="{x:Bind DownloadLinkText, Mode=OneWay}"
                                        TextAlignment="Justify"
                                        TextChanged="{x:Bind OnDownloadLinkTextChanged}"
                                        TextWrapping="Wrap" />

                                    <TextBox
                                        HorizontalAlignment="Stretch"
                                        FontFamily="{StaticResource ContentControlThemeFontFamily}"
                                        FontSize="{StaticResource ControlContentThemeFontSize}"
                                        Foreground="{ThemeResource ContentDialogForeground}"
                                        PlaceholderText="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadFileNamePHText')}"
                                        Text="{x:Bind DownloadFileNameText, Mode=OneWay}"
                                        TextChanged="{x:Bind OnDownloadFileNameTextChanged}"
                                        TextWrapping="NoWrap" />

                                    <Grid ColumnSpacing="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox
                                            Grid.Column="0"
                                            FontFamily="{StaticResource ContentControlThemeFontFamily}"
                                            FontSize="{StaticResource ControlContentThemeFontSize}"
                                            Foreground="{ThemeResource ContentDialogForeground}"
                                            IsReadOnly="True"
                                            PlaceholderText="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadFolderPHText')}"
                                            Text="{x:Bind DownloadFolderText, Mode=OneWay}"
                                            TextChanged="{x:Bind OnDownloadFolderTextChanged}"
                                            TextWrapping="NoWrap" />

                                        <Button
                                            Grid.Column="1"
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Click="{x:Bind OnSelectFolderClicked}"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('SelectFolder')}">

                                            <Button.Content>
                                                <FontIcon FontSize="14" Glyph="&#xE8B7;" />
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>

                        <Grid
                            Grid.Row="1"
                            Padding="{ThemeResource ContentDialogPadding}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Background="{ThemeResource ContentDialogBackground}"
                            ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button
                                Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                Click="{x:Bind OnDownloadClicked}"
                                Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Download')}"
                                IsEnabled="{x:Bind IsPrimaryButtonEnabled, Mode=OneWay}"
                                Style="{ThemeResource AccentButtonStyle}" />

                            <Button
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Click="{x:Bind OnCloseClicked}"
                                Content="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Cancel')}"
                                Tag="{x:Bind AddDownloadTaskFlyout}" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Flyout>
    </Page.Resources>

    <SplitView
        x:Name="DownloadSplitView"
        DisplayMode="Overlay"
        OpenPaneLength="320"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="30,15,30,0"
                    FontSize="22"
                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadManager')}" />

                <!--  下载管理控制栏  -->
                <Grid
                    Grid.Row="1"
                    Height="60"
                    Margin="30,5,30,3"
                    Padding="16,0,0,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE74C;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Operation')}" />

                    <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

                    <TextBlock
                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadEmpty')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DownloadCollection.Count), Mode=OneWay}" />

                    <TextBlock
                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Bind x:String.Format(DownloadingCountInfoString, DownloadCollection.Count), Mode=OneWay}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DownloadCollection.Count), Mode=OneWay}" />

                    <CommandBar
                        Grid.Column="4"
                        VerticalAlignment="Center"
                        DefaultLabelPosition="Right">

                        <CommandBar.PrimaryCommands>
                            <AppBarButton Click="{x:Bind OnAddTaskClicked}" Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('AddTask')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE710;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnContinueAllClicked}"
                                IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadCollection.Count), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('ContinueAll')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE74B;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnPauseDownloadClicked}"
                                IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadCollection.Count), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('PauseDownload')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE769;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </CommandBar.PrimaryCommands>

                        <CommandBar.SecondaryCommands>
                            <AppBarButton
                                Click="{x:Bind OnDeleteDownloadClicked}"
                                IsEnabled="{x:Bind system:Convert.ToBoolean(DownloadCollection.Count), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DeleteDownload')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE74D;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnOpenFolderClicked}"
                                Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('OpenFolder')}"
                                ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('OpenFolderToolTip')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE8B7;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton Click="{x:Bind OnUseInstructionClicked}" Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('UseInstruction')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE946;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarSeparator />

                            <AppBarButton Click="{x:Bind OnDownloadSettingsClicked}" Label="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadSettings')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE713;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </CommandBar.SecondaryCommands>
                    </CommandBar>
                </Grid>

                <!--  下载内容空提示栏  -->
                <Grid
                    Grid.Row="2"
                    Height="60"
                    Margin="30,0,30,0"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DownloadCollection.Count), Mode=OneWay}">

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('EmptyDescription')}"
                        TextAlignment="Center" />
                </Grid>

                <!--  下载内容列表控件  -->
                <ListView
                    Grid.Row="3"
                    Padding="30,0,30,30"
                    ItemsSource="{x:Bind DownloadCollection, Mode=OneWay}"
                    SelectionMode="None"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DownloadCollection.Count), Mode=OneWay}">

                    <ListView.ItemContainerStyle>
                        <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="MinHeight" Value="0 " />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ItemsControl.ItemContainerTransitions>
                        <TransitionCollection />
                    </ItemsControl.ItemContainerTransitions>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:DownloadModel">
                            <Grid
                                Height="60"
                                Margin="0,0,0,2"
                                Padding="16,0"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource ControlCornerRadius}">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="6,0,18,0"
                                    FontSize="18"
                                    FontWeight="Thin"
                                    Glyph="&#xE958;"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Queued, x:False), Mode=OneWay}" />

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="6,0,18,0"
                                    FontSize="18"
                                    FontWeight="Thin"
                                    Glyph="&#xE896;"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="6,0,18,0"
                                    FontSize="18"
                                    FontWeight="Thin"
                                    Glyph="&#xE769;"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused, x:False), Mode=OneWay}" />

                                <FontIcon
                                    Grid.Column="0"
                                    Margin="6,0,18,0"
                                    FontSize="18"
                                    FontWeight="Thin"
                                    Glyph="&#xEA39;"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Failed, x:False), Mode=OneWay}" />

                                <Grid
                                    Grid.Column="0"
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,12,0"
                                    HorizontalAlignment="Left"
                                    Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:False), Mode=OneWay}">

                                    <controls:ImageIcon Source="{x:Bind IconImage, Mode=OneWay}" />
                                </Grid>

                                <Grid
                                    Grid.Column="2"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    RowSpacing="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="FileNameText"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{x:Bind FileName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind FileName}"
                                                    Visibility="{Binding ElementName=FileNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{x:Bind roothelper:SpeedHelper.ConvertSpeedToString(DownloadSpeed), Mode=OneWay}"
                                            TextAlignment="Right"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip MaxWidth="9999">
                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('CurrentSpeed')}" />
                                                        <Run Text="{x:Bind roothelper:SpeedHelper.ConvertSpeedToString(DownloadSpeed), Mode=OneWay}" />
                                                    </TextBlock>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="4,0,4,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="|"
                                            TextAlignment="Right"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(CompletedSize), Mode=OneWay}"
                                            TextAlignment="Right"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip MaxWidth="9999">
                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('CompletedSize')}" />
                                                        <Run Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(CompletedSize), Mode=OneWay}" />
                                                    </TextBlock>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            Grid.Column="4"
                                            Margin="4,0,4,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="|"
                                            TextAlignment="Right"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(TotalSize), Mode=OneWay}"
                                            TextAlignment="Right">

                                            <ToolTipService.ToolTip>
                                                <ToolTip MaxWidth="9999">
                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('FileSize')}" />
                                                        <Run Text="{x:Bind roothelper:VolumeSizeHelper.ConvertVolumeSizeToString(TotalSize), Mode=OneWay}" />
                                                    </TextBlock>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadQueued')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Queued, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Downloading')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadPaused')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadFailed')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Failed, x:False), Mode=OneWay}" />

                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadFinished')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:False), Mode=OneWay}" />

                                        <controls:ProgressBar
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            IsIndeterminate="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Queued), Mode=OneWay}"
                                            ShowError="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Failed), Mode=OneWay}"
                                            ShowPaused="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:True), Mode=OneWay}"
                                            Value="{x:Bind converter:ValueConverterHelper.DownloadProgress(CompletedSize, TotalSize), Mode=OneWay}" />
                                    </Grid>
                                </Grid>

                                <StackPanel
                                    Grid.Column="3"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:True), Mode=OneWay}">

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        Command="{StaticResource ContinueCommand}"
                                        CommandParameter="{x:Bind}"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperating), Mode=OneWay}"
                                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Continue')}"
                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused, x:False), Mode=OneWay}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xE768;" />
                                        </Button.Content>
                                    </Button>

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        Command="{StaticResource PauseCommand}"
                                        CommandParameter="{x:Bind}"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperating), Mode=OneWay}"
                                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Pause')}"
                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadingState(DownloadProgressState), Mode=OneWay}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xE769;" />
                                        </Button.Content>
                                    </Button>

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        Command="{StaticResource DeleteCommand}"
                                        CommandParameter="{x:Bind}"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperating), Mode=OneWay}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xE711;" />
                                        </Button.Content>
                                    </Button>
                                </StackPanel>

                                <StackPanel
                                    Grid.Column="3"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Finished, x:False), Mode=OneWay}">

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        Command="{StaticResource OpenFolderCommand}"
                                        CommandParameter="{x:Bind FilePath}"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        IsEnabled="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsOperating), Mode=OneWay}"
                                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('OpenFolder')}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xEC50;" />
                                        </Button.Content>
                                    </Button>

                                    <Button
                                        Width="32"
                                        Height="32"
                                        Margin="5,0,0,0"
                                        Padding="0"
                                        CornerRadius="{StaticResource ControlCornerRadius}"
                                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('ViewMore')}">

                                        <Button.Content>
                                            <FontIcon FontSize="14" Glyph="&#xE712;" />
                                        </Button.Content>

                                        <Button.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Height="32"
                                                    Padding="11,0"
                                                    Command="{StaticResource DeleteCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Delete')}"
                                                    ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DeleteToolTip')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE74D;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutItem
                                                    Height="32"
                                                    Padding="11,0"
                                                    Command="{StaticResource DeleteWithFileCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DeleteWithFile')}"
                                                    ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DeleteWithFileToolTip')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE74D;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutSeparator />

                                                <MenuFlyoutItem
                                                    Height="32"
                                                    Padding="11,0"
                                                    Command="{StaticResource ShareFileCommand}"
                                                    CommandParameter="{x:Bind FilePath}"
                                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('ShareFile')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE72D;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutItem
                                                    Height="32"
                                                    Padding="11,0"
                                                    Command="{StaticResource FileInformationCommand}"
                                                    CommandParameter="{x:Bind FilePath}"
                                                    Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('FileInformation')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE946;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </SplitView.Content>

        <SplitView.Pane>
            <!--  使用说明  -->
            <Grid
                Margin="0,10,0,0"
                Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                CornerRadius="4,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="16,2,6,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Glyph="&#xE946;" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('UseInstruction')}" />

                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnCloseClicked}"
                        Style="{StaticResource AlternateCloseButtonStyle}"
                        Tag="{x:Bind DownloadSplitView}"
                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('Close')}">

                        <Button.Content>
                            <FontIcon
                                Margin="4"
                                FontSize="16"
                                Glyph="&#xE711;" />
                        </Button.Content>
                    </Button>
                </Grid>

                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Disabled"
                    HorizontalScrollMode="Disabled"
                    VerticalScrollBarVisibility="Visible"
                    VerticalScrollMode="Enabled">

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadDescription1')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="2"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('DownloadDescription2')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="3"
                            Margin="16,0,16,5"
                            Spacing="5">

                            <TextBlock HorizontalAlignment="Left">
                                <Hyperlink Click="{x:Bind OnLearnMoreClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('LearnMore')}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock HorizontalAlignment="Left">
                                <Hyperlink
                                    Click="{x:Bind OnNetworkInternetClicked}"
                                    NavigateUri="ms-settings:network-status"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('NetworkAndInternet')}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock HorizontalAlignment="Left">
                                <Hyperlink Click="{x:Bind OnOpenSettingsClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind rootservice:ResourceService.DownloadManagerResource.GetString('OpenSettings')}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </SplitView.Pane>
    </SplitView>
</Page>
