<Page
    x:Class="PowerTools.Views.Pages.ThemeSwitchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:PowerTools.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rootservice="using:PowerTools.Services.Root"
    xmlns:system="using:System"
    mc:Ignorable="d">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Column="0"
            Margin="30,15,30,0"
            FontSize="22"
            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('ThemeSwitch')}" />

        <ScrollViewer
            Grid.Row="1"
            Margin="0,5,0,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">

            <Grid Margin="0,0,0,40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Width="335"
                    Height="188"
                    Margin="0,0,0,10"
                    Background="{x:Bind SystemAppBackground, Mode=OneWay}"
                    BorderBrush="Black"
                    BorderThickness="8"
                    CornerRadius="8"
                    RequestedTheme="{x:Bind SystemAppTheme, Mode=OneWay}">

                    <Image
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Source="{x:Bind SystemAppImage, Mode=OneWay}"
                        Stretch="UniformToFill" />

                    <StackPanel
                        Width="98"
                        Height="98"
                        Margin="8,8,8,20"
                        Padding="12"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="{ThemeResource AppThemeDisplayBrush}"
                        BorderBrush="Transparent"
                        BorderThickness="1"
                        CornerRadius="4"
                        Opacity="1">

                        <Border
                            Height="1"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            Background="{ThemeResource TextFillColorSecondaryBrush}"
                            Opacity="1" />

                        <Border
                            Height="1"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            Background="{ThemeResource TextFillColorSecondaryBrush}"
                            Opacity="1" />

                        <Border
                            Height="1"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            Background="{ThemeResource TextFillColorSecondaryBrush}"
                            Opacity="1" />

                        <Border
                            Width="42"
                            Height="1"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Left"
                            Background="{ThemeResource TextFillColorSecondaryBrush}"
                            Opacity="1" />

                        <Border
                            Width="24"
                            Height="8"
                            Margin="0,26,0,0"
                            HorizontalAlignment="Right"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="2"
                            Opacity="1" />
                    </StackPanel>
                </Grid>

                <controls:InfoBar
                    Grid.Row="1"
                    Height="50"
                    Margin="30,0,30,3"
                    IsOpen="{x:Bind IsThemeSwitchNotificationEnabled, Mode=OneWay}"
                    Message="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('StartupTaskNotEnabled')}"
                    Severity="Warning"
                    Visibility="{x:Bind IsThemeSwitchNotificationEnabled, Mode=OneWay}">

                    <controls:InfoBar.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.ThemeDictionaries>
                                <ResourceDictionary x:Key="Default">
                                    <StaticResource x:Key="InfoBarInformationalSeverityBackgroundBrush" ResourceKey="CardBackgroundFillColorDefaultBrush" />
                                </ResourceDictionary>
                                <ResourceDictionary x:Key="HighConstract">
                                    <StaticResource x:Key="InfoBarInformationalSeverityBackgroundBrush" ResourceKey="SystemColorWindowColorBrush" />
                                </ResourceDictionary>
                                <ResourceDictionary x:Key="Light">
                                    <StaticResource x:Key="InfoBarInformationalSeverityBackgroundBrush" ResourceKey="CardBackgroundFillColorDefaultBrush" />
                                </ResourceDictionary>
                            </ResourceDictionary.ThemeDictionaries>
                        </ResourceDictionary>
                    </controls:InfoBar.Resources>

                    <controls:InfoBar.ActionButton>
                        <Button
                            HorizontalAlignment="Right"
                            Click="{x:Bind OnEnableStartupTaskClicked}"
                            Content="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('EnableStartupTask')}" />
                    </controls:InfoBar.ActionButton>
                </controls:InfoBar>

                <controls:Expander
                    Grid.Row="2"
                    Margin="30,0,30,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE770;" />

                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SystemThemeSettings')}" />

                            <controls:SplitButton
                                Grid.Column="2"
                                Click="{x:Bind OnRefreshClicked}"
                                Content="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('Refresh')}">

                                <controls:SplitButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem Click="{x:Bind OnOpenPersonalizeClicked}" Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('Personalize')}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE771;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </controls:SplitButton.Flyout>
                            </controls:SplitButton>
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0">
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SystemThemeStyle')}" />

                                <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedSystemThemeStyle.Value, Mode=OneWay}">

                                    <controls:DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSystemThemeStyleClicked}"
                                                GroupName="SystemThemeStyleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedSystemThemeStyle.Key, SystemThemeStyleList[0].Key), Mode=OneWay}"
                                                Tag="0"
                                                Text="{x:Bind system:Convert.ToString(SystemThemeStyleList[0].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSystemThemeStyleClicked}"
                                                GroupName="SystemThemeStyleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedSystemThemeStyle.Key, SystemThemeStyleList[1].Key), Mode=OneWay}"
                                                Tag="1"
                                                Text="{x:Bind system:Convert.ToString(SystemThemeStyleList[1].Value)}" />
                                        </MenuFlyout>
                                    </controls:DropDownButton.Flyout>
                                </controls:DropDownButton>
                            </Grid>

                            <MenuFlyoutSeparator />

                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AppThemeStyle')}" />

                                <controls:DropDownButton Grid.Column="1" Content="{x:Bind SelectedAppThemeStyle.Value, Mode=OneWay}">

                                    <controls:DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnAppThemeStyleClicked}"
                                                GroupName="AppThemeStyleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedAppThemeStyle.Key, AppThemeStyleList[0].Key), Mode=OneWay}"
                                                Tag="0"
                                                Text="{x:Bind system:Convert.ToString(AppThemeStyleList[0].Value)}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnAppThemeStyleClicked}"
                                                GroupName="AppThemeStyleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedAppThemeStyle.Key, AppThemeStyleList[1].Key), Mode=OneWay}"
                                                Tag="1"
                                                Text="{x:Bind system:Convert.ToString(AppThemeStyleList[1].Value)}" />
                                        </MenuFlyout>
                                    </controls:DropDownButton.Flyout>
                                </controls:DropDownButton>
                            </Grid>

                            <MenuFlyoutSeparator />

                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('ShowThemeColorInStartAndTaskbar')}" />

                                <StackPanel
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('ShowThemeColorInStartAndTaskbarOffContent')}"
                                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsShowThemeColorInStartAndTaskbar), Mode=OneWay}" />

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('ShowThemeColorInStartAndTaskbarOnContent')}"
                                        Visibility="{x:Bind IsShowThemeColorInStartAndTaskbar, Mode=OneWay}" />

                                    <ToggleSwitch
                                        MinWidth="0"
                                        Margin="10,-2,-10,0"
                                        IsEnabled="{x:Bind IsShowThemeColorInStartAndTaskbarEnabled, Mode=OneWay}"
                                        IsOn="{x:Bind IsShowThemeColorInStartAndTaskbar, Mode=OneWay}"
                                        OffContent=""
                                        OnContent=""
                                        Toggled="{x:Bind OnShowThemeColorInStartAndTaskbarToggled}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>

                <controls:Expander
                    Grid.Row="3"
                    Margin="30,0,30,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE790;" />

                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoThemeSwitchSettings')}" />

                            <controls:SplitButton
                                Grid.Column="2"
                                Click="{x:Bind OnSaveClicked}"
                                Content="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('Save')}"
                                ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SaveToolTip')}">

                                <controls:SplitButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem Click="{x:Bind OnRestoreDefaultClicked}" Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('RestoreDefault')}">
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE777;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </controls:SplitButton.Flyout>
                            </controls:SplitButton>
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Padding="0">
                            <Grid
                                Height="52"
                                Padding="44,0,16,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoThemeSwitchEnable')}" />

                                <HyperlinkButton
                                    Grid.Column="1"
                                    Margin="0,0,6,0"
                                    Click="{x:Bind OnOpenAutoSwitchProgramClicked}"
                                    Content="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('OpenAutoSwitchProgram')}"
                                    Visibility="{x:Bind IsAutoThemeSwitchEnableValue, Mode=OneWay}" />

                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoThemeSwitchEnableOffContent')}"
                                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsAutoThemeSwitchEnableValue), Mode=OneWay}" />

                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoThemeSwitchEnableOnContent')}"
                                        Visibility="{x:Bind IsAutoThemeSwitchEnableValue, Mode=OneWay}" />

                                    <ToggleSwitch
                                        MinWidth="0"
                                        Margin="10,-2,-10,0"
                                        IsOn="{x:Bind IsAutoThemeSwitchEnableValue, Mode=OneWay}"
                                        OffContent=""
                                        OnContent=""
                                        Toggled="{x:Bind OnAutoThemeSwitchEnableToggled}" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Visibility="{x:Bind IsAutoThemeSwitchEnableValue, Mode=OneWay}">

                                <MenuFlyoutSeparator />

                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoSwitchSystemTheme')}" />

                                    <HyperlinkButton
                                        Grid.Column="1"
                                        Margin="0,0,6,0"
                                        Click="{x:Bind OnShowSetTimeFlyoutClicked}"
                                        Visibility="{x:Bind IsAutoSwitchSystemThemeValue, Mode=OneWay}">

                                        <HyperlinkButton.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SetTime')}" />

                                                <controls:AnimatedIcon
                                                    Width="12"
                                                    Height="12"
                                                    Margin="8,0,0,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AccessibilityView="Raw">
                                                    <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                    <controls:AnimatedIcon.FallbackIconSource>
                                                        <controls:FontIconSource
                                                            FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                            FontSize="8"
                                                            Glyph="&#xE96E;"
                                                            IsTextScaleFactorEnabled="False" />
                                                    </controls:AnimatedIcon.FallbackIconSource>
                                                </controls:AnimatedIcon>
                                            </StackPanel>
                                        </HyperlinkButton.Content>

                                        <FlyoutBase.AttachedFlyout>
                                            <Flyout
                                                x:Name="SystemThemeSetTimeFlyout"
                                                Placement="Bottom"
                                                ShouldConstrainToRootBounds="False">
                                                <Flyout.FlyoutPresenterStyle>
                                                    <Style BasedOn="{StaticResource DefaultFlyoutPresenterStyle}" TargetType="FlyoutPresenter">
                                                        <Setter Property="Padding" Value="0" />
                                                        <Setter Property="MinWidth" Value="0" />
                                                    </Style>
                                                </Flyout.FlyoutPresenterStyle>

                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="40" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Grid
                                                        Grid.Row="0"
                                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="0,0,0,1">

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <FontIcon
                                                            Grid.Column="0"
                                                            Margin="16,0,6,0"
                                                            VerticalAlignment="Center"
                                                            FontSize="16"
                                                            Glyph="&#xE823;" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            FontSize="14"
                                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SetTime')}" />

                                                        <Button
                                                            Grid.Column="2"
                                                            Margin="-5,0,0,0"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Click="{x:Bind OnCloseFlyoutClicked}"
                                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                                            Tag="SystemThemeSetTimeFlyout"
                                                            ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('CloseFlyout')}">

                                                            <Button.Content>
                                                                <FontIcon
                                                                    Margin="4"
                                                                    FontSize="16"
                                                                    Glyph="&#xE711;" />
                                                            </Button.Content>
                                                        </Button>
                                                    </Grid>

                                                    <Grid
                                                        Grid.Row="1"
                                                        Height="52"
                                                        Padding="16,0,16,0"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="0,0,0,1">

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <FontIcon
                                                            Grid.Column="0"
                                                            Margin="0,0,6,0"
                                                            FontSize="16"
                                                            Glyph="&#xE706;" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SystemThemeLightTime')}" />

                                                        <TimePicker
                                                            Grid.Column="2"
                                                            Margin="10,0,0,0"
                                                            ClockIdentifier="24HourClock"
                                                            Style="{StaticResource TimePickerStyle}"
                                                            Time="{x:Bind SystemThemeLightTime, Mode=OneWay}"
                                                            TimeChanged="{x:Bind OnSystemThemeLightTimeChanged}" />
                                                    </Grid>

                                                    <Grid
                                                        Grid.Row="2"
                                                        Height="52"
                                                        Padding="16,0,16,0">

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <FontIcon
                                                            Grid.Column="0"
                                                            Margin="0,0,6,0"
                                                            FontSize="16"
                                                            Glyph="&#xE708;" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SystemThemeDarkTime')}" />

                                                        <TimePicker
                                                            Grid.Column="2"
                                                            Margin="10,0,0,0"
                                                            ClockIdentifier="24HourClock"
                                                            Style="{StaticResource TimePickerStyle}"
                                                            Time="{x:Bind SystemThemeDarkTime, Mode=OneWay}"
                                                            TimeChanged="{x:Bind OnSystemThemeDarkTimeChanged}" />
                                                    </Grid>
                                                </Grid>
                                            </Flyout>
                                        </FlyoutBase.AttachedFlyout>
                                    </HyperlinkButton>

                                    <StackPanel
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoSwitchSystemThemeOffContent')}"
                                            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsAutoSwitchSystemThemeValue), Mode=OneWay}" />

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoSwitchSystemThemeOnContent')}"
                                            Visibility="{x:Bind IsAutoSwitchSystemThemeValue, Mode=OneWay}" />

                                        <ToggleSwitch
                                            MinWidth="0"
                                            Margin="10,-2,-10,0"
                                            IsOn="{x:Bind IsAutoSwitchSystemThemeValue, Mode=OneWay}"
                                            OffContent=""
                                            OnContent=""
                                            Toggled="{x:Bind OnAutoSwitchSystemThemeToggled}" />
                                    </StackPanel>
                                </Grid>

                                <MenuFlyoutSeparator />

                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoSwitchAppTheme')}" />

                                    <HyperlinkButton
                                        Grid.Column="1"
                                        Margin="0,0,6,0"
                                        Click="{x:Bind OnShowSetTimeFlyoutClicked}"
                                        Visibility="{x:Bind IsAutoSwitchAppThemeValue, Mode=OneWay}">

                                        <HyperlinkButton.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SetTime')}" />

                                                <controls:AnimatedIcon
                                                    Width="12"
                                                    Height="12"
                                                    Margin="8,0,0,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    AutomationProperties.AccessibilityView="Raw">
                                                    <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                    <controls:AnimatedIcon.FallbackIconSource>
                                                        <controls:FontIconSource
                                                            FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                            FontSize="8"
                                                            Glyph="&#xE96E;"
                                                            IsTextScaleFactorEnabled="False" />
                                                    </controls:AnimatedIcon.FallbackIconSource>
                                                </controls:AnimatedIcon>
                                            </StackPanel>
                                        </HyperlinkButton.Content>

                                        <FlyoutBase.AttachedFlyout>
                                            <Flyout
                                                x:Name="AppThemeSetTimeFlyout"
                                                Placement="Bottom"
                                                ShouldConstrainToRootBounds="False">
                                                <Flyout.FlyoutPresenterStyle>
                                                    <Style BasedOn="{StaticResource DefaultFlyoutPresenterStyle}" TargetType="FlyoutPresenter">
                                                        <Setter Property="Padding" Value="0" />
                                                        <Setter Property="MinWidth" Value="0" />
                                                    </Style>
                                                </Flyout.FlyoutPresenterStyle>

                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="40" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Grid
                                                        Grid.Row="0"
                                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="0,0,0,1">

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <FontIcon
                                                            Grid.Column="0"
                                                            Margin="16,0,6,0"
                                                            VerticalAlignment="Center"
                                                            FontSize="16"
                                                            Glyph="&#xE823;" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            FontSize="14"
                                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('SetTime')}" />

                                                        <Button
                                                            Grid.Column="2"
                                                            Margin="-5,0,0,0"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Click="{x:Bind OnCloseFlyoutClicked}"
                                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                                            Tag="AppThemeSetTimeFlyout"
                                                            ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('CloseFlyout')}">

                                                            <Button.Content>
                                                                <FontIcon
                                                                    Margin="4"
                                                                    FontSize="16"
                                                                    Glyph="&#xE711;" />
                                                            </Button.Content>
                                                        </Button>
                                                    </Grid>

                                                    <Grid
                                                        Grid.Row="1"
                                                        Height="52"
                                                        Padding="16,0,16,0"
                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                        BorderThickness="0,0,0,1">

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <FontIcon
                                                            Grid.Column="0"
                                                            Margin="0,0,6,0"
                                                            FontSize="16"
                                                            Glyph="&#xE706;" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AppThemeLightTime')}" />

                                                        <TimePicker
                                                            Grid.Column="2"
                                                            Margin="10,0,0,0"
                                                            ClockIdentifier="24HourClock"
                                                            Style="{StaticResource TimePickerStyle}"
                                                            Time="{x:Bind AppThemeLightTime, Mode=OneWay}"
                                                            TimeChanged="{x:Bind OnAppThemeLightTimeChanged}" />
                                                    </Grid>

                                                    <Grid
                                                        Grid.Row="2"
                                                        Height="52"
                                                        Padding="16,0,16,0">

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <FontIcon
                                                            Grid.Column="0"
                                                            Margin="0,0,6,0"
                                                            FontSize="16"
                                                            Glyph="&#xE708;" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AppThemeDarkTime')}" />

                                                        <TimePicker
                                                            Grid.Column="2"
                                                            Margin="10,0,0,0"
                                                            ClockIdentifier="24HourClock"
                                                            Style="{StaticResource TimePickerStyle}"
                                                            Time="{x:Bind AppThemeDarkTime, Mode=OneWay}"
                                                            TimeChanged="{x:Bind OnAppThemeDarkTimeChanged}" />
                                                    </Grid>
                                                </Grid>
                                            </Flyout>
                                        </FlyoutBase.AttachedFlyout>
                                    </HyperlinkButton>

                                    <StackPanel
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoSwitchAppThemeOffContent')}"
                                            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsAutoSwitchAppThemeValue), Mode=OneWay}" />

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('AutoSwitchAppThemeOnContent')}"
                                            Visibility="{x:Bind IsAutoSwitchAppThemeValue, Mode=OneWay}" />

                                        <ToggleSwitch
                                            MinWidth="0"
                                            Margin="10,-2,-10,0"
                                            IsOn="{x:Bind IsAutoSwitchAppThemeValue, Mode=OneWay}"
                                            OffContent=""
                                            OnContent=""
                                            Toggled="{x:Bind OnAutoSwitchAppThemeToggled}" />
                                    </StackPanel>
                                </Grid>

                                <MenuFlyoutSeparator />

                                <Grid
                                    Height="52"
                                    Padding="44,0,16,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('ShowColorInDarkTheme')}" />

                                    <StackPanel
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('ShowColorInDarkThemeOffContent')}"
                                            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsShowColorInDarkThemeValue), Mode=OneWay}" />

                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('ShowColorInDarkThemeOnContent')}"
                                            Visibility="{x:Bind IsShowColorInDarkThemeValue, Mode=OneWay}" />

                                        <ToggleSwitch
                                            MinWidth="0"
                                            Margin="10,-2,-10,0"
                                            IsOn="{x:Bind IsShowColorInDarkThemeValue, Mode=OneWay}"
                                            OffContent=""
                                            OnContent=""
                                            Toggled="{x:Bind OnShowColorInDarkThemeToggled}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>

                <controls:Expander
                    Grid.Row="4"
                    Margin="30,0,30,3"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True">

                    <controls:Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE82F;" />

                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('Tips')}" />
                        </Grid>
                    </controls:Expander.Header>

                    <controls:Expander.Content>
                        <StackPanel Margin="0">
                            <TextBlock
                                Margin="44,10,16,10"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.ThemeSwitchResource.GetString('TipContent1')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </controls:Expander.Content>
                </controls:Expander>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
