<Page
    x:Class="PowerTools.Views.Pages.DriverManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converter="using:PowerTools.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:PowerTools.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:PowerTools.Models"
    xmlns:roothelper="using:PowerTools.Helpers.Root"
    xmlns:rootservice="using:PowerTools.Services.Root"
    xmlns:system="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
        <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>

        <XamlUICommand x:Name="CheckBoxClickCommand" ExecuteRequested="{x:Bind OnCheckBoxExecuteRequested}" />
        <XamlUICommand x:Name="DeleteDriverCommand" ExecuteRequested="{x:Bind OnDeleteDriverExecuteRequested}" />
        <XamlUICommand x:Name="ForceDeleteDriverCommand" ExecuteRequested="{x:Bind OnForceDeleteDriverExecuteRequested}" />
        <XamlUICommand x:Name="OpenFolderCommand" ExecuteRequested="{x:Bind OnOpenFolderExecuteRequested}" />
        <XamlUICommand x:Name="RemoveTaskCommand" ExecuteRequested="{x:Bind OnRemoveTaskExecuteRequested}" />
    </Page.Resources>

    <SplitView
        x:Name="DriverSplitView"
        DisplayMode="Overlay"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Margin="30,10,30,0"
                    Orientation="Horizontal"
                    Spacing="5">

                    <TextBlock
                        HorizontalAlignment="Left"
                        FontSize="22"
                        Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverManager')}" />

                    <TextBlock VerticalAlignment="Bottom" Text="{x:Bind DriverDescription, Mode=OneWay}" />
                </StackPanel>

                <!--  驱动管理控制栏  -->
                <Grid
                    Grid.Row="1"
                    Height="60"
                    Margin="30,5,30,3"
                    Padding="12,0,0,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <AutoSuggestBox
                        Grid.Column="0"
                        Margin="0,0,2,0"
                        VerticalAlignment="Center"
                        IsEnabled="{x:Bind GetIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                        PlaceholderText="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SearchDriverNamePHText')}"
                        QuerySubmitted="{x:Bind OnQuerySubmitted}"
                        Text="{x:Bind SearchText, Mode=OneWay}"
                        TextChanged="{x:Bind OnTextChanged}" />

                    <CommandBar
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        DefaultLabelPosition="Right">

                        <CommandBar.PrimaryCommands>
                            <AppBarButton
                                Click="{x:Bind OnSelectAllClicked}"
                                IsEnabled="{x:Bind GetIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SelectAll')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE8B3;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnSelectNoneClicked}"
                                IsEnabled="{x:Bind GetIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SelectNone')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE8E6;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton Click="{x:Bind OnTaskManagerClicked}" Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('TaskManager')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE71D;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </CommandBar.PrimaryCommands>

                        <CommandBar.SecondaryCommands>
                            <AppBarButton IsEnabled="{x:Bind GetIsLoadingOrOperating(DriverResultKind), Mode=OneWay}" Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('Sort')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE8CB;" />
                                </AppBarButton.Icon>

                                <AppBarButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutSubItem
                                            Height="32"
                                            Padding="11,0,11,0"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortWay')}">

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortWayClicked}"
                                                GroupName="SortWayRadioGroup"
                                                IsChecked="{x:Bind IsIncrease, Mode=OneWay}"
                                                Tag="True"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortIncrease')}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortWayClicked}"
                                                GroupName="SortWayRadioGroup"
                                                IsChecked="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsIncrease), Mode=OneWay}"
                                                Tag="False"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortDecrease')}" />
                                        </MenuFlyoutSubItem>

                                        <MenuFlyoutSubItem
                                            Height="32"
                                            Padding="11,0,11,0"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortRule')}">

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortRuleClicked}"
                                                GroupName="SortRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRule, enum:DriverSortRuleKind.DeviceName), Mode=OneWay}"
                                                Tag="{x:Bind enum:DriverSortRuleKind.DeviceName}"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortByDeviceName')}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortRuleClicked}"
                                                GroupName="SortRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRule, enum:DriverSortRuleKind.InfName), Mode=OneWay}"
                                                Tag="{x:Bind enum:DriverSortRuleKind.InfName}"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortByInfName')}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortRuleClicked}"
                                                GroupName="SortRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRule, enum:DriverSortRuleKind.OEMInfName), Mode=OneWay}"
                                                Tag="{x:Bind enum:DriverSortRuleKind.OEMInfName}"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortByOEMInfName')}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortRuleClicked}"
                                                GroupName="SortRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRule, enum:DriverSortRuleKind.DeviceType), Mode=OneWay}"
                                                Tag="{x:Bind enum:DriverSortRuleKind.DeviceType}"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortByDeviceType')}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortRuleClicked}"
                                                GroupName="SortRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRule, enum:DriverSortRuleKind.Manufacturer), Mode=OneWay}"
                                                Tag="{x:Bind enum:DriverSortRuleKind.Manufacturer}"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortByManufacturer')}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortRuleClicked}"
                                                GroupName="SortRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRule, enum:DriverSortRuleKind.Version), Mode=OneWay}"
                                                Tag="{x:Bind enum:DriverSortRuleKind.Version}"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortByVersion')}" />

                                            <controls:RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnSortRuleClicked}"
                                                GroupName="SortRuleRadioGroup"
                                                IsChecked="{x:Bind x:Object.Equals(SelectedRule, enum:DriverSortRuleKind.Date), Mode=OneWay}"
                                                Tag="{x:Bind enum:DriverSortRuleKind.Date}"
                                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SortByDate')}" />
                                        </MenuFlyoutSubItem>
                                    </MenuFlyout>
                                </AppBarButton.Flyout>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnRefreshClicked}"
                                IsEnabled="{x:Bind GetIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('Refresh')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE72C;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarSeparator />

                            <AppBarButton
                                Click="{x:Bind OnAddDriverClicked}"
                                IsEnabled="{x:Bind GetElevatedIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('AddDriver')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE710;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnAddInstallDriverClicked}"
                                IsEnabled="{x:Bind GetElevatedIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('AddInstallDriver')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE710;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnDeleteDriverClicked}"
                                IsEnabled="{x:Bind GetElevatedIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DeleteDriver')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE711;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton
                                Click="{x:Bind OnForceDeleteDriverClicked}"
                                IsEnabled="{x:Bind GetElevatedIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('ForceDeleteDriver')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE711;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarSeparator />

                            <AppBarButton
                                Click="{x:Bind OnSelectOldDriverClicked}"
                                IsEnabled="{x:Bind GetIsLoadingOrOperating(DriverResultKind), Mode=OneWay}"
                                Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SelectOldDriver')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE74D;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarSeparator />

                            <AppBarButton Click="{x:Bind OnUseInstructionClicked}" Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('UseInstruction')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE946;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton Click="{x:Bind OnOpenDeviceManagementClicked}" Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DeviceManagement')}">
                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE7F8;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </CommandBar.SecondaryCommands>
                    </CommandBar>
                </Grid>

                <!--  驱动管理状态显示栏  -->
                <Grid
                    Grid.Row="2"
                    Height="60"
                    Margin="30,0,30,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Visibility="{x:Bind GetDriverSuccessfullyState(DriverResultKind, x:False), Mode=OneWay}">

                    <!--  正在加载中  -->
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10"
                        Visibility="{x:Bind CheckDriverState(DriverResultKind, enum:DriverResultKind.Loading), Mode=OneWay}">

                        <controls:ProgressRing IsActive="True" IsEnabled="True" />

                        <TextBlock
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('LoadingDriver')}"
                            TextAlignment="Center" />
                    </StackPanel>

                    <!--  加载失败（包含搜索结果为空）  -->
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{x:Bind DriverFailedContent, Mode=OneWay}"
                        TextAlignment="Center"
                        Visibility="{x:Bind CheckDriverState(DriverResultKind, enum:DriverResultKind.Failed), Mode=OneWay}" />
                </Grid>

                <!--  驱动理结果展示项目控件  -->
                <ListView
                    Grid.Row="3"
                    Padding="30,0,30,30"
                    IsEnabled="{x:Bind GetIsOperating(DriverResultKind), Mode=OneWay}"
                    ItemsSource="{x:Bind DriverCollection, Mode=OneWay}"
                    SelectionMode="None"
                    Visibility="{x:Bind GetDriverSuccessfullyState(DriverResultKind, x:True), Mode=OneWay}">

                    <ListView.ItemContainerStyle>
                        <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="MinHeight" Value="0 " />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ItemsControl.ItemContainerTransitions>
                        <TransitionCollection />
                    </ItemsControl.ItemContainerTransitions>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:DriverModel">
                            <controls:Expander
                                Margin="0,0,0,2"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                IsExpanded="False">

                                <controls:Expander.Header>
                                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <CheckBox
                                            Grid.Column="0"
                                            MinWidth="0"
                                            Margin="0,0,12,0"
                                            Command="{StaticResource CheckBoxClickCommand}"
                                            IsChecked="{x:Bind IsSelected, Mode=TwoWay}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip MaxWidth="9999">
                                                    <Grid>
                                                        <TextBlock Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('Selected')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                                        <TextBlock Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('UnSelected')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                                    </Grid>
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </CheckBox>

                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="0,10"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">

                                            <TextBlock
                                                x:Name="DeviceNameText"
                                                HorizontalAlignment="Left"
                                                IsTextSelectionEnabled="True"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind DeviceName}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Content="{x:Bind DeviceName}"
                                                        Visibility="{Binding ElementName=DeviceNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                </ToolTipService.ToolTip>
                                            </TextBlock>

                                            <TextBlock
                                                x:Name="DriverManufacturerText"
                                                HorizontalAlignment="Left"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                IsTextSelectionEnabled="True"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="{x:Bind DriverManufacturer}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Content="{x:Bind DriverManufacturer}"
                                                        Visibility="{Binding ElementName=DriverManufacturerText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                </ToolTipService.ToolTip>
                                            </TextBlock>
                                        </StackPanel>

                                        <CommandBar
                                            Grid.Column="2"
                                            Margin="0,0,-15,0"
                                            VerticalAlignment="Center"
                                            DefaultLabelPosition="Right">

                                            <CommandBar.SecondaryCommands>
                                                <AppBarButton
                                                    Command="{StaticResource OpenFolderCommand}"
                                                    CommandParameter="{x:Bind DriverLocation}"
                                                    Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('OpenFolder')}">

                                                    <AppBarButton.Icon>
                                                        <FontIcon FontSize="14" Glyph="&#xE8B7;" />
                                                    </AppBarButton.Icon>
                                                </AppBarButton>

                                                <AppBarSeparator />

                                                <AppBarButton
                                                    Command="{StaticResource DeleteDriverCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    IsEnabled="{x:Bind roothelper:RuntimeHelper.IsElevated}"
                                                    Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DeleteDriver')}">

                                                    <AppBarButton.Icon>
                                                        <FontIcon FontSize="14" Glyph="&#xE711;" />
                                                    </AppBarButton.Icon>
                                                </AppBarButton>

                                                <AppBarButton
                                                    Command="{StaticResource ForceDeleteDriverCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    IsEnabled="{x:Bind roothelper:RuntimeHelper.IsElevated}"
                                                    Label="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('ForceDeleteDriver')}">

                                                    <AppBarButton.Icon>
                                                        <FontIcon FontSize="14" Glyph="&#xE711;" />
                                                    </AppBarButton.Icon>
                                                </AppBarButton>
                                            </CommandBar.SecondaryCommands>
                                        </CommandBar>
                                    </Grid>
                                </controls:Expander.Header>

                                <controls:Expander.Content>
                                    <Grid
                                        Margin="40,0,0,0"
                                        ColumnSpacing="15"
                                        RowSpacing="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverInfName')}" />

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind DriverInfName}"
                                            TextWrapping="Wrap" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverOEMInfName')}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind DriverOEMInfName}"
                                            TextWrapping="Wrap" />

                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverType')}" />

                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind DriverType}"
                                            TextWrapping="Wrap" />

                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverVersion')}" />

                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind system:Convert.ToString(DriverVersion)}"
                                            TextWrapping="Wrap" />

                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverDate')}" />

                                        <TextBlock
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind DriverDate.ToString('yyyy/MM/dd')}"
                                            TextWrapping="Wrap" />

                                        <TextBlock
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverSize')}" />

                                        <TextBlock
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind DriverSize}"
                                            TextWrapping="Wrap" />

                                        <TextBlock
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('SignatureName')}" />

                                        <TextBlock
                                            Grid.Row="6"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind SignatureName}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </controls:Expander.Content>
                            </controls:Expander>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </SplitView.Content>

        <SplitView.Pane>
            <Grid>
                <!--  使用说明  -->
                <Grid
                    Margin="0,10,0,0"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    CornerRadius="4,0,0,0"
                    Visibility="{x:Bind CheckDriverPaneKindState(DriverPaneKind, enum:DriverPaneKind.UseInstruction), Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="16,0,6,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Glyph="&#xE946;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('UseInstruction')}" />

                        <Button
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="{x:Bind OnCloseClicked}"
                            Style="{StaticResource AlternateCloseButtonStyle}"
                            ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('Close')}">

                            <Button.Content>
                                <FontIcon
                                    Margin="4"
                                    FontSize="16"
                                    Glyph="&#xE711;" />
                            </Button.Content>
                        </Button>
                    </Grid>

                    <ScrollViewer
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Disabled"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollBarVisibility="Visible"
                        VerticalScrollMode="Enabled">

                        <Grid Margin="0,0,0,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="16,10,16,10"
                                FontSize="15"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverInstruction')}"
                                TextAlignment="Left" />

                            <TextBlock
                                Grid.Row="1"
                                Margin="16,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverDescriptionContent1')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Grid.Row="2"
                                Margin="16,0,16,5"
                                FontSize="14"
                                FontWeight="Normal"
                                Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverDescriptionContent2')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <StackPanel
                                Grid.Row="4"
                                Margin="16,0,16,5"
                                Spacing="5">

                                <TextBlock HorizontalAlignment="Left">
                                    <Hyperlink NavigateUri="https://learn.microsoft.com/windows-hardware/drivers/kernel/introduction-to-plug-and-play" UnderlineStyle="None">
                                        <Run Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('LearnPnpDriver')}" />
                                    </Hyperlink>
                                </TextBlock>

                                <TextBlock HorizontalAlignment="Left">
                                    <Hyperlink Click="{x:Bind OnRunAsAdministratorClicked}" UnderlineStyle="None">
                                        <Run Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('RunAsAdministrator')}" />
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>

                <!--  任务管理  -->
                <Grid
                    Margin="0,10,0,0"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    CornerRadius="4,0,0,0"
                    Visibility="{x:Bind CheckDriverPaneKindState(DriverPaneKind, enum:DriverPaneKind.TaskManager), Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="16,0,6,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Glyph="&#xE71D;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('TaskManager')}" />

                        <controls:InfoBadge
                            Grid.Column="2"
                            Margin="6,2,0,0"
                            HorizontalAlignment="Left"
                            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DriverOperationCollection.Count), Mode=OneWay}"
                            Value="{x:Bind DriverOperationCollection.Count, Mode=OneWay}" />

                        <Button
                            Grid.Column="3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="{x:Bind OnClearDriverOperationTaskClicked}"
                            IsEnabled="{x:Bind system:Convert.ToBoolean(DriverOperationCollection.Count), Mode=OneWay}"
                            Style="{StaticResource AlternateCloseButtonStyle}"
                            ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('ClearDriverOperationTask')}">

                            <Button.Content>
                                <FontIcon
                                    Margin="4"
                                    FontSize="16"
                                    Glyph="&#xE74D;" />
                            </Button.Content>
                        </Button>

                        <Button
                            Grid.Column="4"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="{x:Bind OnCloseClicked}"
                            Style="{StaticResource AlternateCloseButtonStyle}"
                            ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('Close')}">

                            <Button.Content>
                                <FontIcon
                                    Margin="4"
                                    FontSize="16"
                                    Glyph="&#xE711;" />
                            </Button.Content>
                        </Button>
                    </Grid>

                    <Grid
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DriverOperationCollection.Count), Mode=OneWay}">

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('DriverOperationTaskEmpty')}"
                            TextAlignment="Center"
                            TextWrapping="WrapWholeWords" />
                    </Grid>

                    <ListView
                        Grid.Row="1"
                        Margin="0,2,0,0"
                        Padding="0,0,0,30"
                        ItemsSource="{x:Bind DriverOperationCollection}"
                        SelectionMode="None"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DriverOperationCollection.Count), Mode=OneWay}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:DriverOperationModel">
                                <Grid
                                    Height="60"
                                    Margin="2,0,2,2"
                                    Padding="16,0,6,0"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource ControlCornerRadius}">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Grid
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        RowSpacing="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            x:Name="DriverInfNameText"
                                            Grid.Row="0"
                                            MinWidth="50"
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="{x:Bind DriverInfName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind DriverInfName}"
                                                    Visibility="{Binding ElementName=DriverInfNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            x:Name="DriverOperationText"
                                            Grid.Row="1"
                                            MinWidth="50"
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="{x:Bind DriverOperation, Mode=OneWay}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind DriverOperation, Mode=OneWay}"
                                                    Visibility="{Binding ElementName=DriverOperationText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Grid>

                                    <controls:ProgressRing
                                        Grid.Column="1"
                                        Width="20"
                                        Height="20"
                                        Margin="10,0,8,0"
                                        IsActive="True"
                                        Visibility="{x:Bind IsOperating, Mode=OneWay}" />

                                    <Button
                                        Grid.Column="1"
                                        Width="Auto"
                                        Height="Auto"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Command="{StaticResource RemoveTaskCommand}"
                                        CommandParameter="{x:Bind DriverOperationGuid}"
                                        Style="{StaticResource AlternateCloseButtonStyle}"
                                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.DriverManagerResource.GetString('RemoveTask')}"
                                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsOperating), Mode=OneWay}">

                                        <Button.Content>
                                            <FontIcon
                                                Margin="4"
                                                FontSize="16"
                                                Glyph="&#xE711;" />
                                        </Button.Content>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </SplitView.Pane>
    </SplitView>
</Page>
