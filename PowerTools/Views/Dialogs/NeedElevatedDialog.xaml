<ContentDialog
    x:Class="PowerTools.Views.Dialogs.NeedElevatedDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rootservice="using:PowerTools.Services.Root"
    xmlns:window="using:PowerTools.Views.Windows"
    Title="{x:Bind rootservice:ResourceService.DialogResource.GetString('NeedElevated')}"
    CloseButtonText="{x:Bind rootservice:ResourceService.DialogResource.GetString('Cancel')}"
    DefaultButton="Primary"
    FlowDirection="{x:Bind ((FrameworkElement)window:MainWindow.Current.Content).FlowDirection, Mode=OneWay}"
    PrimaryButtonClick="{x:Bind OnRunAsAdministratorClicked}"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    PrimaryButtonText="{x:Bind rootservice:ResourceService.DialogResource.GetString('RunAsAdministrator')}"
    RequestedTheme="{x:Bind ((FrameworkElement)window:MainWindow.Current.Content).RequestedTheme, Mode=OneWay}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <TextBlock
        Margin="0,0,0,5"
        Text="{x:Bind rootservice:ResourceService.DialogResource.GetString('NeedElevatedContent')}"
        TextAlignment="Justify"
        TextWrapping="Wrap" />
</ContentDialog>
